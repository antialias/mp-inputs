@import "../../../stylesheets/common"

.line-chart-container
  display flex
  flex-direction column
  height 100%
  position relative

  .line-chart-header
    background-color header-gray
    border-bottom 1px solid border-gray
    color grey-500
    flex 0 0 40px
    font-size 12px
    text-align center
    line-height 40px

  .line-chart
    flex 1 0

.mixpanel-platform-output,
.mixpanel-platform-output .line_wrapper,
.mixpanel-platform-output .line_wrapper .graph
      position relative
      height 100%

.highcharts-tooltip
  cursor pointer
  & > rect
    visibility hidden
    border-radius 4px

  & > span
    background-color #fff
    box-shadow 0 1px 10px 0 rgba(9, 42, 62, 0.18)
    border-radius 4px
    overflow hidden

    div
      font 14px font-helvetica-neue
      max-width 200px
      text-align center
