@import "../../../stylesheets/common"


.highcharts-tooltip span
  padding 0 5px

  div
    color medium-gray
    font 700 11px font-helvetica-neue
    max-width 200px
    padding 5px
    text-align center

    &.title
      border-bottom 1px solid light-gray
      overflow hidden

    &.results
      display flex
      padding 0

    &.percent
      color medium-gray
      font-weight 400
      flex-grow 1

    &.count
      flex-grow 1
