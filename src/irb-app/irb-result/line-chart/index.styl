@import "../../../stylesheets/common"

.mixpanel-platform-output,
.mixpanel-platform-output .line_wrapper,
.mixpanel-platform-output .line_wrapper .graph
      position relative
      height 100%

.highcharts-tooltip
  & > rect
    visibility hidden
    border-radius 4px

  & > span
    background-color #fff
    box-shadow 0 1px 10px 0 rgba(9, 42, 62, 0.18)
    border-radius 4px
    overflow hidden

    div
      color medium-gray
      font 14px font-helvetica-neue
      max-width 200px
      text-align center

      &.title
        background-color gray
        color #fff
        overflow hidden
        padding 10px 16px

      &.results
        color #434e5a
        display flex
        padding 10px 15px

        .absolute
          flex-grow 1
          text-align left

          .count
            font-weight 700

        .percent
          color medium-gray
          font-weight 400
          flex-grow 1


