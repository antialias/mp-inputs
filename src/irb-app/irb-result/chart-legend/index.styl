@import "../../../stylesheets/common"
.chart-legend
  background-color lighten(background-gray, 75%)
  display flex
  flex-direction column
  height 100%

  .header
    background-color #fff
    border 1px solid lighten(background-gray, 25%)
    border-right 0 none
    height 40px
    line-height 40px
    padding-left 15px

  .search
    border-left 1px solid lighten(background-gray, 25%)
    input
      background-color lighten(background-gray, 50%)
      border 1px solid light-gray
      border-radius 20px
      color lighten(medium-gray, 25%)
      font 500 12px font-helvetica-neue
      font-style italic
      margin 5px 10px
      padding-left 10px
      height 20px
      width calc(100% - 32px)

  .no-result
    color medium-gray
    font-size 12px
    font-style italic
    padding 5px 15px

  .body
    border-left 1px solid lighten(background-gray, 25%)
    flex-grow 1
    height 100%

    .display-option
      background-color #fff
      border 1px solid light-gray
      border-radius 3px
      box-sizing border-box
      color dark-gray
      cursor pointer
      font-size 10px
      margin 10px
      padding 5px
      text-align center
      text-transform uppercase
      user-select none
      width calc(100% - 20px)

    .legend-series
      .info
        cursor pointer
        display flex
        height 25px
        justify-content space-between
        padding 0 10px

        .name, .count
          line-height 25px

        .name
          ellipsis()
          color dark-gray
          font-size 12px

          &:before
            background medium-gray
            content ''
            display inline-block
            height 10px
            margin-right 5px
            mask url(../../../../assets/chart-controls/caret-dropdown.svg) no-repeat center
            transition transform .25s
            width 10px

        .count
          font-size 10px

      &.expanded
        .series-values
          max-height 400px

      .series-values
        overflow-y scroll

        button
          align-items center
          background none
          border none
          display flex
          padding 3px 10px
          width 100%

          .icon
            background-color #fff
            border 1px solid light-gray
            border-radius 3px
            flex 0 0 12px
            height 12px
            margin-right 10px

            &:before
              background medium-gray
              content ''
              display none
              width 100%
              height 100%
              mask url(../../../../assets/properties/check.svg) no-repeat center

            &.color
              background-color light-gray

              &:before
                background #fff

          .label
            color light-gray
            font 500 12px font-helvetica-neue
            text-align left

            &.search-result
                .slice
                  color lighten(light-gray, 10%)

                .matches-search
                  color dark-gray

          .delete-wrapper
             display flex
             flex 1 0 10px
             justify-content flex-end
             visibility hidden

             .delete
               width 10px
               color light-gray
               &:hover
                 color dark-gray

          &.series
            .label
              ellipsis()

          &.select-all
            align-items flex-start

            .label
              color medium-gray

          &.showing
            .label
              color medium-gray

            .icon
              &:before
                display inline-block

          &:hover
            .label
              color dark-gray

              .slice
                color dark-gray

            .icon
              border-color medium-gray

            .delete-wrapper
               visibility visible

      &.hidden
        .name:before
          transform rotate(-90deg)

        .series-values
          height 0
