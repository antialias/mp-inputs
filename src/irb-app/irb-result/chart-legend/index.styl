@import "../../../stylesheets/common"
.chart-legend
  background-color lighten(background-gray, 75%)
  display flex
  flex-direction column
  height 100%

  .header
    background-color #fff
    border 1px solid lighten(background-gray, 25%)
    border-right 0 none
    height 40px
    line-height 40px
    padding-left 15px

  .search
    border-left 1px solid lighten(background-gray, 25%)
    border-bottom 2px solid lighten(background-gray, 25%)

    input
      background-color #fff
      border 0
      box-sizing border-box
      color light-gray
      font 500 12px font-helvetica-neue
      font-style italic
      margin 0
      padding 0
      padding-left 20px
      height 30px
      width 100%
      &::placeholder
        color light-gray
        font 500 12px font-helvetica-neue
        font-style italic

  .results
    background-color lighten(background-gray, 75%)
    border-left 1px solid lighten(background-gray, 25%)

  .no-result
    color medium-gray
    font-size 12px
    font-style italic
    padding 5px 15px

  .display-option
    background-color #fff
    border 1px solid light-gray
    border-radius 3px
    box-sizing border-box
    color dark-gray
    cursor pointer
    font-size 10px
    margin 10px
    padding 5px
    text-align center
    text-transform uppercase
    user-select none
    width calc(100% - 20px)

  .info
    background-color lighten(background-gray, 75%)
    cursor pointer
    display flex
    height 25px
    justify-content space-between
    padding 0 10px

    .name, .count
      line-height 25px

    .name
      ellipsis()
      color dark-gray
      font-size 12px

      &:before
        background medium-gray
        content ''
        display inline-block
        height 10px
        margin-right 5px
        mask url(../../../../assets/chart-controls/caret-dropdown.svg) no-repeat center
        transition transform .25s
        transform rotate(-90deg)
        width 10px

      &.showing
        &:before
          transform rotate(0)

    .count
      font-size 10px

  .series-values
    button
      align-items center
      background none
      border none
      display flex
      padding 3px 10px
      width 100%

      .icon
        background-color #fff
        border 1px solid light-gray
        border-radius 3px
        flex 0 0 12px
        height 12px
        margin-right 10px

        &:before
          background medium-gray
          content ''
          display none
          width 100%
          height 100%
          mask url(../../../../assets/properties/check.svg) no-repeat center

        &.color
          background-color light-gray

          &:before
            background #fff

      .label
        color light-gray
        font 500 12px font-helvetica-neue
        text-align left

        &.series
          .label
            ellipsis()

        &.search-result
            .slice
              color lighten(light-gray, 10%)

            .matches-search
              color dark-gray

      .delete-wrapper
         display flex
         flex 1 0 10px
         justify-content flex-end
         visibility hidden

        .delete
          width 10px
          color light-gray
          &:hover
            color dark-gray

      &.series
        .label
          ellipsis()

      &.select-all
        align-items flex-start

        .label
          color medium-gray

      &.showing
        .label
          color medium-gray
          transform rotate(0)

        .icon
          &:before
            display inline-block

      &:hover
        .label
          color dark-gray

        .delete-wrapper
           visibility visible

      &.hidden
        .name:before
          transform rotate(-90deg)

          .slice
            color dark-gray

        .icon
          border-color medium-gray
