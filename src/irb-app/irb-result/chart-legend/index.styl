@import "../../../stylesheets/common"
.chart-legend
  display flex
  flex-direction column
  height 100%
  width 174px

  .header
    border 1px solid lighten(background-gray, 25%)
    border-right 0 none
    height 40px
    line-height 40px
    padding-left 15px

  .body
    background-color lighten(background-gray, 75%)
    border-left 1px solid lighten(background-gray, 25%)
    flex-grow 1
    height 100%

    button
      align-items center
      background none
      border none
      display flex
      padding 3px 10px
      width 100%

      &.series
        .label
          ellipsis()
          color medium-gray
          font 500 12px font-helvetica-neue
          text-align left

        .icon
          border 1px solid light-gray
          border-radius 3px
          flex 0 0 12px
          height 12px
          margin-right 10px

        &.showing
          color medium-gray

          .icon
            background url(../../../../assets/properties/checkbox-checked.svg) no-repeat center
            border-color light-gray

        &:hover
          color dark-gray

          .icon
            border-color medium-gray

    .search
      display none

    .info
      display flex
      height 25px
      justify-content space-between
      padding 0 10px

      .name, .count
        line-height 25px

      .name
        ellipsis()
        color dark-gray
        font-size 12px

      .count
        font-size 10px
