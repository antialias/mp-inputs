@import "../../../stylesheets/common"
.chart-legend
  background-color lighten(background-gray, 75%)
  display flex
  flex-direction column
  height 100%

  .header
    background-color #fff
    border 1px solid lighten(background-gray, 25%)
    border-right 0 none
    height 40px
    line-height 40px
    padding-left 15px

  .search
    border-left 1px solid lighten(background-gray, 25%)
    input
      background-color lighten(background-gray, 50%)
      border 1px solid light-gray
      border-radius 20px
      color lighten(medium-gray, 25%)
      font 500 12px font-helvetica-neue
      font-style italic
      margin 5px 10px
      padding-left 10px
      height 20px
      width calc(100% - 32px)

  .no-result
    color medium-gray
    font-size 12px
    font-style italic
    padding 5px 15px

  .body
    border-left 1px solid lighten(background-gray, 25%)
    flex-grow 1
    height 100%

    .legend-series
      .info
        cursor pointer
        display flex
        height 25px
        justify-content space-between
        padding 0 10px

        .name, .count
          line-height 25px

        .name
          ellipsis()
          color dark-gray
          font-size 12px

          &:before
            background medium-gray
            content ''
            display inline-block
            height 10px
            mask url(../../../../assets/chart-controls/caret-dropdown.svg) no-repeat center
            margin-right 5px
            transition transform .25s
            width 10px

        .count
          font-size 10px

      .series-values
        max-height 300px
        overflow-y scroll

        button
          align-items center
          background none
          border none
          display flex
          padding 3px 10px
          width 100%

          .icon
            border 1px solid light-gray
            border-radius 3px
            flex 0 0 12px
            height 12px
            margin-right 10px

          .label
            color light-gray
            font 500 12px font-helvetica-neue
            text-align left

            &.search-result
                .slice
                  color lighten(light-gray, 10%)

                .matches-search
                  color dark-gray

          &.series
            .label
              ellipsis()

          &.select-all
            align-items flex-start

            .label
              color medium-gray

          &.showing
            .label
              color medium-gray

            .icon
              background url(../../../../assets/properties/checkbox-checked.svg) no-repeat center
              border-color light-gray

          &:hover
            .label
              color dark-gray

              .slice
                color dark-gray

            .icon
              border-color medium-gray

      &.closed
        .name:before
          transform rotate(-90deg)

        .series-values
          height 0
