@import "../../../stylesheets/common"
.chart-legend
  background-color lighten(background-gray, 75%)
  border-radius 0 0 5px 0
  display flex
  flex-direction column
  height 100%

  .header
    background-color header-gray
    border 1px solid border-gray
    border-right none
    border-top none
    color grey-500
    font-size 12px
    height 40px
    line-height 40px
    padding-left 15px

  .search
    border-left 1px solid lighten(background-gray, 25%)
    border-bottom 2px solid lighten(background-gray, 25%)

    input
      background-color #fff
      border 0
      box-sizing border-box
      color light-gray
      font 500 12px font-helvetica-neue
      font-style italic
      margin 0
      padding 0
      padding-left 20px
      height 30px
      width 100%
      &::placeholder
        color light-gray
        font 500 12px font-helvetica-neue
        font-style italic

  .results
    background-color lighten(background-gray, 75%)
    border-left 1px solid lighten(background-gray, 25%)
    margin-right 6px

  .no-result
    color medium-gray
    font-size 12px
    font-style italic
    padding 5px 15px

  .display-option
    background-color #fff
    border 1px solid light-gray
    border-radius 3px
    box-sizing border-box
    color dark-gray
    cursor pointer
    font-size 10px
    margin 10px
    padding 5px
    text-align center
    text-transform uppercase
    user-select none
    width calc(100% - 20px)

  .info
    stick-title-height = 40px
    background-color lighten(background-gray, 75%)
    cursor pointer
    display flex
    height stick-title-height
    justify-content space-between
    padding 0 10px 0 16px

    .name, .count
      line-height stick-title-height

    .name
      ellipsis()
      color #4c6072
      font-size 13px
      font-weight bold

      &:before
        background medium-gray
        content ''
        display inline-block
        height 10px
        margin-right 6px
        mask url(../../../../assets/chart-controls/caret-dropdown.svg) no-repeat center
        transition transform .25s
        transform rotate(-90deg)
        width 10px

      &.showing
        &:before
          transform rotate(0)

    .count
      color #7e879e
      font-size 12px

  .series-values
    button
      align-items center
      background none
      border none
      display flex
      padding 6px 0 6px 16px
      width 100%

      .icon
        background-color #fff
        border 1px solid #d3dee8
        border-radius 3px
        box-sizing border-box
        flex 0 0 18px
        height 18px
        margin-right 11px

        &:before
          background #4c6072
          content ''
          display none
          width 100%
          height 100%
          mask url(../../../../assets/properties/check.svg) no-repeat center

      .label
        color #858ea4
        font 500 12px font-helvetica-neue
        text-align left

        &.search-result
            .matches-search
              color #4c6072
              font-weight 600

      .delete-wrapper
         display flex
         flex 1 0 10px
         justify-content flex-end
         visibility hidden

        .delete
          width 10px
          color light-gray
          &:hover
            color dark-gray

      &.series
        .label
          ellipsis()

      &.showing
        .label
          transform rotate(0)

        .icon
          &:before
            display inline-block

          &.color
            border 0 none
            background-color light-gray
            &:before
              background #fff

      &:hover
        .label
          color #4c6072

        .delete-wrapper
           visibility visible

      &.hidden
        .name:before
          transform rotate(-90deg)

          .slice
            color #4c6072
