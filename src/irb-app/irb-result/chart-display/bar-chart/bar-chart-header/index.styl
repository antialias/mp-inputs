@import "../../../../../stylesheets/common"

irb-bar-chart-header
  .chart-header-container
    align-items center
    display flex
    padding-left 1px

    &.loading
      visibility hidden

  .bar-chart-header, .bar-chart-axis
    align-items center
    display flex
    height 100%
    position relative

    .text
      align-items center
      cursor pointer

      &.shrinkable-label
        ellipsis()
        flex 1 1

    > .sort-icon
      margin-right 10px

    &:hover, .axis-title:hover, &.active-sort-panel, &.active-sort-panel .axis-title
      > .text
        color mp-blue
      > .sort-icon
        svg-icon-style(mp-blue, speed: 0s)

      .sort-icon::before
        opacity 1

    .sort-holder
      bottom 5px
      display flex
      height 0
      justify-content center
      left 0
      position absolute
      width 100%

      .sort-controls
        position relative

      .sort-control-icons
        height 100%
        display flex

      .sort-controls, .sort-icon
        height 30px

      .sort-icon
        cursor pointer
        width 36px
        &:not(:last-child)
          border-right 1px solid grey-100

        &::before
          height 10px
          margin-top 10px

        &:hover::before
          background blue-300

        &.selected
          svg-icon-style(grey-900)
          cursor default

  .bar-chart-header:first-child .sort-holder
    min-width 160px

  .bar-chart-header
    border-right 1px solid border-gray
    box-sizing border-box

    .text
      padding-left 15px
    .sort-icon
      margin-left auto

  .bar-chart-axis
    justify-content center

    .axis-title
      display flex
      justify-content center

      .text
        text-align center
        margin-left 36px

      .sort-icon
        width 36px

    .max-value
      color mp-blue
      display flex
      justify-content flex-end
      position absolute
      right 0

      .text
        border-bottom 1px dotted mp-blue
        line-height 20px
        margin-right 30px
        padding-bottom 1px

        &:hover
          border-bottom-style solid
