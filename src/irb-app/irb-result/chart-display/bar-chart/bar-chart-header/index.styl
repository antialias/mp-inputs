@import "../../../../../stylesheets/common"

irb-bar-chart-header
  .chart-header-container
    align-items center
    display flex

    &.loading
      visibility hidden

  .bar-chart-header, .bar-chart-axis
    align-items center
    display flex
    height 100%
    position relative

    .text
      align-items center
      cursor pointer

      &.shrinkable-label
        ellipsis()
        flex 1 1

      &:hover
        color mp-blue

    &:hover .sort-icon::before
      opacity 1

    .sort-holder
      bottom 5px
      display flex
      height 0
      justify-content center
      left 0
      position absolute
      width 100%

      .sort-controls
        position relative

      .sort-controls, .sort-icon
        height 30px

      .sort-icon
        cursor pointer
        &:not(:last-child)
          border-right 1px solid grey-100

        &::before
          height 10px
          margin-top 10px

        &:hover::before
          background blue-300

  .bar-chart-header:first-child .sort-holder
    min-width 120px

  .bar-chart-header
    border-right 1px solid border-gray

    .text
      padding-left 15px
    .sort-icon
      margin-left auto

  .bar-chart-axis
    justify-content flex-end

    .axis-title
      display flex
      justify-content center
      width 50%

      .text
        text-align center
        margin-left 36px

    .max-value
      color mp-blue
      display flex
      justify-content flex-end
      width 25%

      .text
        border-bottom 1px dotted mp-blue
        line-height 20px
        margin-right 30px
        padding-bottom 1px

        &:hover
          border-bottom-style solid
