@import "../../../../../stylesheets/common"

irb-bar-chart-header
  .chart-header-container
    align-items center
    display flex

    &.loading
      visibility hidden

  .bar-chart-header, .bar-chart-axis
    align-items center
    cursor pointer
    display flex
    height 100%
    position relative

    .text
      align-items center

    &:hover .sort-icon::before
      opacity 1

    .sort-holder
      bottom -20px
      display flex
      justify-content center
      left 0
      position absolute
      width 100%

    .sort-controls
      background-color #fff
      border-radius 5px
      box-shadow 2px 3px 10px -4px black
      height 30px
      opacity 0
      transition opacity 0.1s
      z-index 1

      .sort-icon
        height 30px

        &:not(:last-child)
          border-right 1px solid grey-100

        &::before
          height 10px
          margin-top 10px

        &:hover::before
          background blue-300

    &.active-sort-panel .sort-controls
      left 50%
      opacity 1



  .bar-chart-header
    border-right 1px solid border-gray

    .text
      padding-left 15px
    .sort-icon
      margin-left auto

  .bar-chart-axis
    justify-content flex-end

    .axis-title
      display flex
      justify-content center
      width 50%

      .text
        margin-left 36px

    .max-value
      color blue-700
      display flex
      justify-content flex-end
      width 25%

      .text
        border-bottom 1px dotted blue-700
        line-height 20px
        margin-right 30px
        padding-bottom 1px
