@import "../../stylesheets/common"

legend-width = 174px
min-bar-chart-height = 600px

.irb-result
  position relative

  .controls
    clearfix()

  .chart
    display flex
    width 100%
    transition opacity .2s
    
    &.bar-chart-type
      min-height min-bar-chart-height

    .highcharts-tooltip, .content
      .title
        background-color blue-500
        color #fff
        font 14px font-helvetica-neue
        overflow hidden
        padding 10px 16px

      .results
        color grey-900
        display flex
        padding 10px 15px

        .absolute
          flex-grow 1
          text-align left
        
          .count
            font-weight 700
        
        .percent
          color medium-gray
          flex-grow 1
          font-weight 400
          text-align right

    .bar-color, .series-icon.color, .title
      &.segment-color-1
        background segment-color-1

      &.segment-color-2
        background segment-color-2

      &.segment-color-3
        background segment-color-3

      &.segment-color-4
        background segment-color-4

      &.segment-color-5
        background segment-color-5

      &.segment-color-6
        background segment-color-6

      &.segment-color-7
        background segment-color-7

      &.segment-color-8
        background segment-color-8

    .main-chart
      flex 1 1
      position relative
      width "calc(100% - %s)" % legend-width

      .chart-loader
        .chart-header
          background-color grey-100
          border-bottom solid 1px grey-200
          display flex
          height 40px

          .header-text-container
            display flex
            flex-direction row
            justify-content center
            width 100%

            .header-text
              background-color grey-200
              height 16px
              left 16px
              position relative
              top 12px
              width 30%

          .header-icon
            background url("~assets/extras-menu/ellipsis.svg") no-repeat center
            float right
            height 100%
            width 32px

        .chart-graph
          background-color white
          border-radius 0 0 15px 15px
          display flex
          flex-direction row
          height 559px
          justify-content center
          width 100%

          .chart-graph-text
            line-height 25

          .loader
            left 63px
            loader()
            position relative
            top -190px

    .legend
      flex 0 0 legend-width
      z-index 1

  .toast
    margin-top -60px
    margin-left 10px
