@import "../../stylesheets/common"

.irb-result
  padding 24px
  padding-top 0
  position relative

  .controls
    clearfix()

    margin-bottom 15px

  .chart
    width 100%
    transition opacity .2s

    &.loading
      opacity .2
      pointer-events none

  .loader
    loader()
    position absolute
    top 25%
    left 50%
