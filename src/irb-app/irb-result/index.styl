@import "../../stylesheets/common"

.irb-result
  position relative

  .controls
    clearfix()

  .chart
    display flex
    align-items stretch

    width 100%
    transition opacity .2s

    &.loading
      opacity .2
      pointer-events none

    .main-chart
      flex 1 1
      width 100%

    .legend
      flex 0 1 174px
      width 172px

  .loader
    loader()
    position absolute
    top 25%
    left 50%

  .toast
    margin-top -60px
    margin-left 10px
