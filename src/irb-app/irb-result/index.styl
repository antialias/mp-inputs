@import "../../stylesheets/common"

legend-width = 174px

.irb-result
  position relative

  .controls
    clearfix()

  .chart
    display flex
    width 100%
    transition opacity .2s

    .bar-color, .series-icon.color
      &.segment-color-1
        background segment-color-1

      &.segment-color-2
        background segment-color-2

      &.segment-color-3
        background segment-color-3

      &.segment-color-4
        background segment-color-4

      &.segment-color-5
        background segment-color-5

      &.segment-color-6
        background segment-color-6

      &.segment-color-7
        background segment-color-7

      &.segment-color-8
        background segment-color-8

    &.loading
      opacity .2
      pointer-events none

    .main-chart
      flex 1 1
      position relative
      width "calc(100% - %s)" % legend-width

    .legend
      flex 0 0 legend-width
      z-index 1

  .loader
    loader()
    position absolute
    top 25%
    left 50%

  .toast
    margin-top -60px
    margin-left 10px
