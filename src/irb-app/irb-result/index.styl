@import "../../stylesheets/common"

legend-width = 174px

.irb-result
  position relative

  .controls
    clearfix()

  .chart
    display flex
    width 100%
    transition opacity .2s

    .bar-color, .series-icon.color
      &.segment-color-1
        background mp-navy

      &.segment-color-2
        background mp-ultramarine

      &.segment-color-3
        background blue-300

      &.segment-color-4
        background mp-turquoise

      &.segment-color-5
        background mp-seafoam

      &.segment-color-6
        background mp-aquamarine

      &.segment-color-7
        background mp-orange

      &.segment-color-8
        background mp-yellow

    &.loading
      opacity .2
      pointer-events none

    .main-chart
      flex 1 1
      width "calc(100% - %s)" % legend-width

    .legend
      flex 0 0 legend-width
      z-index 1

  .loader
    loader()
    position absolute
    top 25%
    left 50%

  .toast
    margin-top -60px
    margin-left 10px
