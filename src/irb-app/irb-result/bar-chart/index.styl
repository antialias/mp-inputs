@import "../../../stylesheets/common"

.bar-chart
  table
    overflow hidden
    width 100%

    thead
      border-top 1px solid lighten(background-gray, 25%)
      box-shadow 0 0 6px light-gray
      position relative
      z-index 1

      tr, th
        display block
        padding 0

      irb-bar-chart-header
        .bar-chart-container
          display flex

          & > div
            border-right 1px solid lighten(background-gray, 50%)

          &:last-child
            border-right 0 none

        .bar-chart-header, .bar-chart-axis
          display flex
          padding 10px 0

          .text
            align-items center

        .bar-chart-header .text
          padding-left 15px

        .bar-chart-axis
            justify-content flex-end

            .axis-title
              text-align center
              width 50%

            .max-value
              color medium-gray
              padding-right 15px
              text-align right
              width calc(25% - 15px)

    thead, tbody
      display block
      overflow-y scroll
      overflow-x hidden

    tbody
      min-height 300px
      max-height calc(100vh - 353px)

    th, td
      white-space nowrap

    th
      text-align left
      padding 8px

    tr:first-child td
      border-top-color transparent

    tr:last-child td
      border-bottom-color transparent

    td
      border 2px solid lighten(background-gray, 50%)
      border-bottom-color lighten(background-gray, 75%)
      color medium-gray
      font-size 12px
      padding 12px
      text-align right
      vertical-align top

      &:first-child
        border-left none

      &:not(:last-child)
        width 1%

      &:last-child
        border-right none
        text-align left

      ul.stacked
        display flex

      li
        white-space nowrap
        transition width .5s

        &:not(:last-child)
          margin-bottom 7px

      &.chart-header
        max-width 160px

        li
          overflow hidden
          text-overflow ellipsis

      &.chart-data
        border none
        padding 0
        padding-top 12px
        position relative

        .chart-grid
          display flex
          height 100%
          left 0
          opacity .3
          position absolute
          top 0
          width 100%

          .grid-line
            border-right 2px solid background-gray
            flex-grow 1
            height 100%

            &:last-child
              border 0 none

        li
          cursor pointer
          height 20px
          margin-bottom 2px
          margin-left -2px
          position relative
          text-align right
          user-select none

          .background
            background medium-gray
            height 100%
            position absolute
            width 100%
            z-index 0

          .label
            color white
            float right
            font-size 12px
            line-height 20.5px
            padding 0px 4px
            position relative
            width 100px
            z-index 1

  .hover-label
    position absolute

    .content
      background-color white
      border 1px solid medium-gray
      border-radius 3px
      color medium-gray
      font 700 11px font-helvetica-neue
      padding 5px
      position absolute
      top -45px
      left -50px
      text-align center
      user-select text
      max-width 200px
      z-index 3


      .title
        border-bottom 1px solid light-gray
        padding-bottom 5px
        overflow hidden
        white-space nowrap

      .results
        align-items center
        display flex
        padding-top 5px
        height 15

        div
          line-height 15px
          padding 0 5px

        .count
          flex-grow 1

        .percent
          color light-gray
          font-weight 600
          flex-grow 1
