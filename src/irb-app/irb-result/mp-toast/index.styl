@import "../../../stylesheets/common"

toast-height = 30px
toast-width = 250px

font-helvetica-neue = 'Helvetica Neue', Helvetica, Arial, sans-serif

.toast
  background-color #fff
  border 1px solid #c4c8d6
  border-radius 8px
  box-shadow: 0 7px 18px 0 rgba(121,124,135,0.26);
  height toast-height
  padding 10px
  padding-left 15px
  position absolute
  user-select none
  width toast-width
  z-index 2

  button
    background-color transparent
    border none
    padding 0

  .toast-section
    height toast-height
    line-height toast-height
    float left

    &.toast-action
      color #646670
      font 600 12px font-helvetica-neue
      margin 0 4%
      text-transform uppercase
      width 25%

    &.toast-message
      color #c4c8d6
      font-weight 500
      width 55%

    &.toast-exit
      background-image url(./close.svg)
      background-repeat no-repeat
      background-position center
      background-size 12px
      margin-left 2%
      width 10%
