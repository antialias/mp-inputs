@import "../../../stylesheets/common"

toggle-height = 34px

.chart-controls-container
  align-items center
  border-bottom 1px solid border-gray
  display flex
  justify-content flex-start
  padding 9px 11px
  panel-top()

.chart-control
  position relative

  button
    svg-icon-style(grey-500, mp-blue, pos-left: -5px)
    svg-height(toggle-height)
    background none
    background-color initial
    background-position center
    background-repeat no-repeat
    border none
    color grey-500
    font-weight 700
    height 100%
    padding 0
    white-space nowrap
    .button-flex-wrapper
      align-items center
      display flex
      justify-content center

    &.selected
      color grey-900
      font-weight 900
      svg-icon-style(grey-900, pos-left: -5px)

    &::before, &::after
      content none

  .options
    top toggle-height + 2

.chart-controls-component
  .title
    color grey-700
    font-size 11px
    font-weight bold
    margin-bottom 5px
    padding 5px 20px
    text-transform uppercase

  ul.control-list
    li
      border none
      height inherit
      justify-content flex-start
      margin 0 10px

      button
        height inherit
        margin 0
        text-transform capitalize
        cursor default

  button.button-option > .button-flex-wrapper
    justify-content flex-start


.error-no-project-data .irb-result .chart-toggle
  button, button:hover
    color grey-500
    cursor default
    svg-icon
      svg, path
        color grey-500
        fill grey-500
