@import "../../../stylesheets/common"

.groups
  align-items center
  display flex
  justify-content flex-end

  .group
    margin 0 5px

    ul.chart-toggle
      display flex

    li
      border 1px solid transparent
      border-radius 3px
      display flex
      height 30px
      justify-content flex-end
      position relative
      z-index 2

      button
        align-items center
        background none
        background-color initial
        background-position center
        background-repeat no-repeat
        border none
        color light-gray
        display flex
        font-weight 600
        height 30px
        justify-content center
        padding 0
        white-space nowrap

        &:hover
          color medium-gray

        &.dropdown
          border-left 1px solid transparent
          padding 0
          width 20px

          &:before
            content ''
            background light-gray
            width 10px
            height 10px
            display inline-block
            mask url(../../../../assets/chart-controls/caret-dropdown.svg) no-repeat center

        &.label
          padding 0 10px

        &::before, &::after
          content none

      .chart-style-options
        background-color white
        border 1px solid medium-gray
        border-radius 3px
        box-shadow 0 7px 18px 0 rgba(121,124,135,0.26)
        margin-top 3px
        min-width 100px
        padding 10px 15px
        position absolute
        right -1px
        top 30px

        button
          justify-content flex-start

        .chart-type-title
          color medium-gray
          font-weight 600
          font-size 11px
          height 25px
          line-height 25px
          text-transform uppercase


        .style-option
          color light-gray
          font-weight 700
          font-size 10px
          height 25px
          line-height 25px
          padding 0
          text-align left
          white-space nowrap
          width 100%

          &:hover
            color medium-gray

          &.selected
            color dark-gray

      .chart-icon
        &:before
          background light-gray
          content ''
          display inline-block
          height 10px
          margin-right 10px
          width 10px

        &:hover:before
          background medium-gray

        &.selected:before
          background dark-gray

        &.line
          &:before
            mask url(../../../../assets/chart-controls/line.svg) no-repeat center

          &.stacked:before
            mask url(../../../../assets/chart-controls/line-stacked.svg) no-repeat center

        &.bar
          &:before
            mask url(../../../../assets/chart-controls/bar.svg) no-repeat center

          &.stacked:before
            mask url(../../../../assets/chart-controls/bar-stacked.svg) no-repeat center

        &.table
          &:before
            mask url(../../../../assets/chart-controls/table.svg) no-repeat center

      &.chart-type:hover, &.editing
        border-color light-gray

        button.dropdown
          border-color light-gray

  .show-hide-series
    button.show-hide
      width 30px
      background-image url(../../../../assets/charts/compare-inactive.svg)

    li.selected
      background-color initial
      border-color medium-gray

      button.show-hide
        background-image url(../../../../assets/charts/compare.svg)

    .pane-container
      box-shadow 0px 3px 10px -4px #000
      height 400px
      margin-top 2px
      position absolute
      right 23px
      width 400px
      z-index 2

      .content
        height 330px

        .info
          background-color #f2f2f4
          bottom 0
          border-top 2px #e4e5e9 solid
          font-family inherit
          height 40px
          line-height 40px
          position absolute
          width 100%

          .count
            color medium-gray
            float left
            font-size 12px
            margin-left 10px

          button.unselect
            background none
            border none
            border-left 2px #e4e5e9 solid
            color medium-gray
            float right
            height 100%
            width 100px

            &:hover
              color dark-gray

        ul.series-names
          height 290px
          overflow-y auto

          li
            border 0 none
            float left
            width 50%

            &:nth-child(-n+2)
              padding-top 10px

            button.series
              color light-gray
              cursor pointer
              display block
              font-family inherit
              font-size 12px
              height 27px
              line-height 17px
              overflow hidden
              padding 5px 0
              margin 0 5%
              text-align left
              text-indent 0
              white-space nowrap
              width 90%

              &::before
                border 1px solid light-gray
                border-radius 3px
                content ''
                float left
                height 15px
                left 0
                margin-right 10px
                position relative
                top 0
                width 15px

              &.showing
                color medium-gray

                &::before
                  border-color light-gray
                  background url(../../../../assets/properties/checkbox-checked.svg) no-repeat center

              &:hover
                color dark-gray

                &::before
                  border-color medium-gray
