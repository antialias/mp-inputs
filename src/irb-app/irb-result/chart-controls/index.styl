@import "../../../stylesheets/common"

toggle-height = 34px

.chart-controls-container
  align-items center
  border-bottom 1px solid border-gray
  display flex
  justify-content flex-start
  padding 9px 11px
  panel-top()

.chart-control
  position relative

  button
    svg-icon-style(grey-500, mp-blue, pos-left: -5px)
    svg-height(toggle-height)
    background none
    background-color initial
    background-position center
    background-repeat no-repeat
    border none
    color grey-500
    font-weight 700
    height 100%
    padding 0
    white-space nowrap
    .button-flex-wrapper
      align-items center
      display flex
      justify-content center

    &.selected
      color grey-900
      font-weight 900
      svg-icon-style(grey-900, pos-left: -5px)

    &::before, &::after
      content none

  // dropdown menu
  .options
    background-color white
    border-radius 5px
    box-shadow 0 7px 18px 0 rgba(121,124,135,0.26)
    margin-top 2px
    min-width 100px
    position absolute
    left 0
    padding 8px 10px 9px 10px
    top toggle-height + 2
    z-index 3

    .button-flex-wrapper
      justify-content flex-start

    .button-option
      border-radius 3px
      color grey-700
      font-weight 500
      font-size 12px
      height inherit
      line-height 30px
      padding 0px 10px
      position relative
      text-align left
      white-space nowrap
      width 100%
      svg-icon-style(grey-700, mp-blue, pos-left: -5px)

      &::before
        background-color grey-700

      &:hover
        background-color grey-100
        color mp-blue

      &.selected
        color grey-900
        font-weight bold
        svg-icon-style(grey-900, pos-left: -5px)
        &:hover
          background white
          color grey-900
          cursor default
          svg-icon-style(grey-900, pos-left: -5px)

      &:not(.selected):not(.disabled)
        cursor pointer

.error-no-project-data .irb-result .chart-toggle
  button, button:hover
    color grey-500
    cursor default
    svg-icon
      svg, path
        color grey-500
        fill grey-500
