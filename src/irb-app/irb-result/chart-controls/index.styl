@import "../../../stylesheets/common"

chart-toggle-icon(filename)
  svg-icon(filename, 8px, 5px, grey-700)
  &.button-option::before
    left 16px
    top 2px

.groups
  align-items center
  border-bottom 1px solid border-gray
  display flex
  justify-content flex-end
  padding 10px
  panel-top()

  .group
    margin 0 5px

    ul.chart-toggle
      display flex

    li
      border 1px solid transparent
      border-radius 3px
      display flex
      height 30px
      justify-content flex-end
      position relative
      z-index 2

      &.selected
        background-color initial
        border-color dark-gray

      button
        align-items center
        background none
        background-color initial
        background-position center
        background-repeat no-repeat
        border none
        color grey-700
        display flex
        font-weight 600
        height 30px
        justify-content center
        padding 0
        white-space nowrap

        &:hover
          color blue-300

        &.selected
          color grey-900

        &.dropdown
          border-left 1px solid transparent
          padding 0
          width 20px

          &:before
            content ''
            background light-gray
            width 10px
            height 10px
            display inline-block
            mask url("~assets/chart-controls/caret-dropdown.svg") no-repeat center

          &:hover:before
            background medium-gray

        &.label
          padding 0 10px 0 34px

        &::before, &::after
          content none

      .options
        background-color white
        border-radius 4px
        box-shadow 0 7px 18px 0 rgba(121,124,135,0.26)
        margin-top 3px
        min-width 100px
        padding 16px 0 4px 0
        position absolute
        right -1px
        top 30px

        button
          justify-content flex-start

        .button-option
          color grey-700
          font-weight bold
          font-size 12px
          height 25px
          line-height 25px
          margin-bottom 12px
          padding 0 24px 0 48px
          position relative
          text-align left
          white-space nowrap
          width 100%

          &::before
            background-color grey-700

          &:hover
            background-color grey-100
            color blue-300

          &.selected
            color grey-900

      .icon
        &.line
          chart-toggle-icon('line')

          &.stacked
            chart-toggle-icon('line_stacked')

        &.bar
          chart-toggle-icon('bar')

          &.stacked
            chart-toggle-icon('bar_stacked')

        &.table
          chart-toggle-icon('table')

        &.linear
          chart-toggle-icon('analysis_linear')

        &.rolling
          chart-toggle-icon('analysis_rolling')

        &.logarithmic
          chart-toggle-icon('analysis_logarithmic')

        &.cumulative
          chart-toggle-icon('analysis_cumulative')

        &.absolute
          &::before
            // TODO replace with chart-toggle-icon
            mask url("~assets/extras-menu/pound.svg") no-repeat center
            background-position center
            background-repeat no-repeat
            content ''
            height 22px
            left 16px
            position absolute
            top 0
            width 22px

        &.relative
          &::before
            // TODO replace with chart-toggle-icon
            mask url("~assets/extras-menu/percent.svg") no-repeat center
            background-position center
            background-repeat no-repeat
            content ''
            height 22px
            left 16px
            position absolute
            top 0
            width 22px

        &:hover, &.stacked:hover
          &::before
            background-color blue-300

        &.selected, &.stacked.selected
          &::before
            background-color grey-900

      &.chart-type:hover, &.editing
        border-color light-gray

        button.dropdown
          border-color light-gray

  .extras-menu
    button.extras-menu
      background-color grey-700
      height 30px
      width 30px
      mask url("~assets/extras-menu/ellipsis.svg") no-repeat center

      &:hover
        background blue-300

      &.selected
        background grey-900

    .options.extras-menu-options
      display flex
      padding-bottom 18px

      .disabled
        opacity .5
        pointer-events none

      .analysis ul
        border-right 1px solid grey-200

      .section
        flex-grow 1

        li
          border none
          height inherit
          justify-content flex-start

          button
            height inherit
            margin 0
            padding 6px 48px
            text-transform capitalize

            &.button-option.icon::before
              top 7px

        .title
          color grey-900
          font-size 12px
          font-weight bold
          padding 6px 18px
          text-transform uppercase
