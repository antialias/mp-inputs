@import "../../../stylesheets/common"

.groups
  align-items center
  border-bottom 1px solid border-gray
  display flex
  justify-content flex-end
  padding 10px
  panel-top()

  .group
    margin 0 5px

    ul.chart-toggle
      display flex

    li
      border 1px solid transparent
      border-radius 3px
      display flex
      height 30px
      justify-content flex-end
      position relative
      z-index 2

      &.selected
        background-color initial
        border-color dark-gray

      button
        align-items center
        background none
        background-color initial
        background-position center
        background-repeat no-repeat
        border none
        color grey-700
        display flex
        font-weight 600
        height 30px
        justify-content center
        padding 0
        white-space nowrap

        &:hover
          color blue-300

        &.selected
          color grey-900

        &.dropdown
          border-left 1px solid transparent
          padding 0
          width 20px

          &:before
            content ''
            background light-gray
            width 10px
            height 10px
            display inline-block
            mask url("~assets/chart-controls/caret-dropdown.svg") no-repeat center

          &:hover:before
            background medium-gray

        &.label
          padding 0 10px

        &::before, &::after
          content none

      .options
        background-color white
        border-radius 3px
        box-shadow 0 7px 18px 0 rgba(121,124,135,0.26)
        margin-top 3px
        min-width 100px
        padding 16px 0
        position absolute
        right -1px
        top 30px

        button
          justify-content flex-start

        .button-option
          color grey-700
          font-weight 700
          font-size 12px
          height 25px
          line-height 25px
          padding 0 24px
          text-align left
          white-space nowrap
          width 100%

          &:hover
            background-color grey-100
            color blue-300

          &.selected
            color grey-900

      .icon
        &:before
          background grey-700
          content ''
          display inline-block
          height 10px
          margin-right 10px
          width 10px

        &:hover:before
          background blue-300

        &.selected:before
          background grey-900

        &.line
          &:before
            mask url("~assets/chart-controls/line.svg") no-repeat center

          &.stacked:before
            mask url("~assets/chart-controls/line-stacked.svg") no-repeat center

        &.bar
          &:before
            mask url("~assets/chart-controls/bar.svg") no-repeat center

          &.stacked:before
            mask url("~assets/chart-controls/bar-stacked.svg") no-repeat center

        &.table
          &:before
            mask url("~assets/chart-controls/table.svg") no-repeat center

        &.linear
          &:before
            mask url("~assets/extras-menu/linear.svg") no-repeat center

        &.rolling
          &:before
            mask url("~assets/extras-menu/rolling.svg") no-repeat center

        &.logarithmic
          &:before
            mask url("~assets/extras-menu/logarithmic.svg") no-repeat center

        &.cumulative
          &:before
            mask url("~assets/extras-menu/cumulative.svg") no-repeat center

        &.absolute
          &:before
            mask url("~assets/extras-menu/pound.svg") no-repeat center

        &.relative
          &:before
            mask url("~assets/extras-menu/percent.svg") no-repeat center

      &.chart-type:hover, &.editing
        border-color light-gray

        button.dropdown
          border-color light-gray

  .extras-menu
    button.extras-menu
      background grey-700
      height 30px
      width 30px
      mask url("~assets/extras-menu/ellipsis.svg") no-repeat center

      &:hover
        background blue-300

      &.selected
        background grey-900

    .extras-menu-options
      display flex

      .disabled
        opacity .5
        pointer-events none

      .analysis
        border-right 1px light-gray solid
        padding-right 15px

      .value
        padding-left 15px

      .section
        flex-grow 1

        li
          justify-content flex-start

          button
            height 24px
            padding 0px
            text-transform capitalize

        .title
          color dark-gray
          font-size 11px
          font-weight bold
          padding 6px 0px
          text-transform uppercase
