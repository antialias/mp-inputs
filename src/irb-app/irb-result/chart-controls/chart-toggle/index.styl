@import "../../../../stylesheets/common"
@import "../index"

disable-button-color = grey-200

ul.chart-toggle
  border solid 1px transparent
  border-radius 3px
  display flex

  &.enabled:hover, &.editing-charttype
    border-color border-gray
    box-shadow 0 1px 2px 0 rgba(0, 0, 0, 0.05)

    li.chart-type
      border-color border-gray

      &:after
        content none

  &.enabled
    li.chart-type:not(.disabled)
      button:hover:not(.selected)
        color mp-blue

        &.selected
          color inherit

  li.chart-type
    border-right 1px solid transparent
    display flex
    justify-content flex-end
    position relative
    z-index 3

    &:after
      background-color border-gray
      content ''
      display block
      height 28px
      margin 3px 0
      position absolute
      right -1px
      width 1px

    &:first-child
      border-bottom-left-radius 3px
      border-top-left-radius 3px

    &:last-child
      border-right none
      border-bottom-right-radius 3px
      border-top-right-radius 3px

      &:after
        content none

    &:not(.disabled):not(.selected)
      .toggle-button:hover
        background-color grey-50

    &:hover, &.editing
      border-color grey-300

      button.dropdown
        > .button-flex-wrapper
          border-color grey-300

        .extras-menu-container
          z-index 2

          .extras-menu
            margin 5px 0
            position absolute
            right 0

    &.disabled
      svg-icon-style(disable-button-color)
      button
        &.label
          svg-icon-style(disable-button-color, pos-left: -5px)
          color disable-button-color
          cursor default

          &:hover
            color disable-button-color

        &.dropdown
          cursor default
          svg-icon-style(disable-button-color)
          > .button-flex-wrapper
            background-color inherit
            border-color transparent

    &.selected
      button.label
        cursor default

    &.has-dropdown
      button.label
        margin-right 24px

      &.selected
        button.dropdown .button-flex-wrapper
          svg-icon-style(grey-900, mp-blue, pos-top: 1px)

  button
    &.label
      font-size 12px
      padding-left 20px
      padding-right 5px
      line-height toggle-height

      &:last-child
        padding-right 15px

    &.dropdown
      cursor pointer
      padding 0
      position absolute
      right 7px
      svg-icon-style(grey-300, mp-blue, pos-top: 1px)
      svg-height(toggle-height)

      > .button-flex-wrapper
        background-color grey-100
        border 1px solid transparent
        border-radius 3px
        height 22px
        margin-left 3px
        width 22px

      &:hover
        > .button-flex-wrapper
          background-color grey-50
          border-color grey-300

      &:last-child
        padding-right 10px
        width 30px

  li.chart-type.editing
      button.dropdown
        > .button-flex-wrapper
          background-color grey-50
          border-color grey-300

  // dropdown menu
  .options
    background-color white
    border-radius 5px
    box-shadow 0 7px 18px 0 rgba(121,124,135,0.26)
    margin-top 2px
    min-width 100px
    position absolute
    left 0
    padding 8px 10px 9px 10px
    top toggle-height + 2
    z-index 3

    .button-flex-wrapper
      justify-content flex-start

    .button-option
      border-radius 3px
      color grey-700
      font-weight 500
      font-size 12px
      height inherit
      line-height 30px
      padding 0px 10px
      position relative
      text-align left
      white-space nowrap
      width 100%
      svg-icon-style(grey-700, mp-blue, pos-left: -5px)

      &::before
        background-color grey-700

      &:hover
        background-color grey-100
        color mp-blue

      &.selected
        color grey-900
        font-weight bold
        svg-icon-style(grey-900, pos-left: -5px)
        &:hover
          background white
          color grey-900
          cursor default
          svg-icon-style(grey-900, pos-left: -5px)
