@import "../../../stylesheets/common"

.table-chart-type
  overflow hidden
  border-bottom-left-radius 5px
  border-bottom-right-radius 5px

.table-chart
  font-size 12px
  overflow hidden
  white-space nowrap

  .left-table-container,
  .right-table-container
    display inline-block
    position relative

    .fixed-header
      left 0
      position absolute
      top 0
      white-space nowrap
      z-index 1

      .fixed-header-cell
        border-left 1px solid border-gray
        cursor pointer
        display inline-block
        font-weight bold
        padding 0 21px 0 17px
        position relative
        &:first-child
          border-left 1px solid border-gray

        .sort-arrows
          background-image url("~assets/charts/sort_arrows_sprite.png")
          background-position 0 center
          background-repeat no-repeat
          display inline-block
          height 100%
          margin-left 5px
          opacity 0
          position absolute
          right 7px
          transition opacity 0.2s
          width 8px
          &.sort-desc
            background-position -8px center
          &.sort-active
            opacity 1

        &:hover
          .sort-arrows
            opacity 1

  .left-table-container
    z-index 2

    .fixed-header
      .fixed-header-cell
        &:first-child
          border-left-color transparent

  .left-table, .right-table
    display inline-block
    margin-bottom -3px
    max-height calc(100vh - 430px)
    position relative

    table
      width 100%

      th, td
        border 1px solid border-gray
        border-top none
        border-bottom none
        line-height 15px

      th
        padding 0 20px 0 17px

      td
        ellipsis()
        box-sizing border-box
        max-width 300px
        padding 13px 17px
        vertical-align top

        &.first-column-cell
          border-left none

      th:first-child
        border-left-color transparent

      tr
        border 1px solid border-gray
        border-left none
        border-right none

        &:first-child
          border-top none

      tbody
        tr:last-child
          border-bottom none

  .left-table
    overflow-x scroll
    overflow-y hidden
    text-align left

    th, td
      &:last-child
        border-right none

      &.even
        background grey-50

  .right-table
    overflow scroll
    text-align right
    width 100%

    tr:nth-child(even) td
      background grey-50

    th, td
      font-size 13px
      &:last-child
        border-right none

  // 1 or 2 column table

  &:not(.full-width)
    display inline-block

    .left-table
      overflow-y scroll

  // Scroll shadows

  .left-table, .fixed-header
    transition box-shadow 0.2s

  &.scrolled-x
    .left-table
      border-right solid 2px border-gray
      box-shadow 1px 0 2px 0 rgba(11, 42, 61, 0.04)

  &.scrolled-y
    .fixed-header
      border-bottom solid 2px border-gray
      box-shadow 1px 0 2px 0 rgba(11, 42, 61, 0.04)
