@import "../../stylesheets/common"

.irb-app.irb-learn-active

  // Learn modals

  .irb-learn
    mp-modal
      width 520px

      .mp-modal-content
        padding 190px 20px 30px
        text-align center

        .mp-modal-title
          font-size 16px
          font-weight bold
          line-height 1.13em

        .mp-modal-subtitle
          color grey-500
          font-size 12px
          font-weight 600
          line-height 1.5em

  // Learn tooltips

  .irb-learn-tooltip-container
    position relative

    mp-tutorial-tooltip
      z-index 99 // allow drop-menus to overlap tooltips

    &:not(.irb-learn-transitioning) mp-tutorial-tooltip:not(.irb-learn-reminding)[hide="false"] + *
      z-index 100 // make sure tooltips don't overlap adjacent controls

    .mp-tooltip-title
      color grey-50
      font-size 16px
      font-weight bold
      line-height 2.2em

    .mp-tooltip-subtitle
      color rgba(255,255,255,0.64)
      font-size 14px
      line-height 1.7em

  // Close buttons

  .mp-modal-close, .mp-tooltip-close
    svg-icon-style(grey-300)
    cursor pointer
    position absolute
    right 24px
    top 24px
    transition color 100ms

    &:hover
      svg-icon-style(grey-200)

  .mp-tooltip-close
    svg-icon-style(blue-100)
    right 10px
    top 10px

    &:hover
      svg-icon-style(white)

  // Learn disabled UI

  .irb-learn-disabled,
  .irb-learn-disabled-except-first-child > :not(:first-child),
  .irb-learn-disabled-except-last-child > :not(:last-child)
    opacity 0.2
    pointer-events none

  &.irb-learn-choose-event
    .irb-learn-choose-event-disabled,
    .irb-learn-choose-event-disabled-except-first-child > :not(:first-child),
    .irb-learn-choose-event-disabled-except-last-child > :not(:last-child)
      opacity 0.2
      pointer-events none

  &.irb-learn-compare-event
    .irb-learn-compare-event-disabled,
    .irb-learn-compare-event-disabled-except-first-child > :not(:first-child),
    .irb-learn-compare-event-disabled-except-last-child > :not(:last-child)
      opacity 0.2
      pointer-events none

  &.irb-learn-group-by
    .irb-learn-group-by-disabled,
    .irb-learn-group-by-disabled-except-first-child > :not(:first-child),
    .irb-learn-group-by-disabled-except-last-child > :not(:last-child)
      opacity 0.2
      pointer-events none

  &.irb-learn-manipulate-data
    .irb-learn-manipulate-data-disabled,
    .irb-learn-manipulate-data-disabled-except-first-child > :not(:first-child),
    .irb-learn-manipulate-data-disabled-except-last-child > :not(:last-child)
      opacity 0.2
      pointer-events none

  // Learn emphasis animations

  @keyframes wiggle
    15%
      transform translateX(-1px)
    30%
      transform translateX(2px)
    45%
      transform translateX(-4px)
    60%
      transform translateX(4px)
    75%
      transform translateX(-2px)
    90%
      transform translateX(1px)

  .irb-learn-transitioning .irb-learn-emphasize,
  .irb-learn-transitioning.irb-learn-emphasize > :not(mp-tutorial-tooltip),
  .irb-learn-reminding .irb-learn-emphasize,
  mp-tutorial-tooltip.irb-learn-reminding
    animation wiggle 1s cubic-bezier(.36,.07,.19,.97) 200ms both
    transform translateX(0)
