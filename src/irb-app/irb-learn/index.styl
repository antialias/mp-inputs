@import "../../stylesheets/common"

.irb-app.irb-learn-active

  // Learn modals

  .irb-learn
    mp-modal
      width 520px

      .mp-modal-content
        padding 190px 70px 30px
        text-align center

        .mp-modal-title
          font-size 16px
          font-weight bold
          line-height 1.13em

        .mp-modal-subtitle
          color var(--mp-grey)
          font-size 12px
          font-weight 500
          line-height 1.5em

  // Learn tooltips

  .irb-learn-tooltip-container
    position relative

    mp-tutorial-tooltip
      z-index 99 // allow drop-menus to overlap tooltips

      &[placement="center"]
        top 70px

    .mp-tooltip-title
      color grey-50
      font-size 16px
      font-weight bold
      line-height 2.2em

    .mp-tooltip-subtitle
      color grey-100
      font-size 14px
      font-weight 500
      line-height 1.7em

  .mp-modal-close, .mp-tooltip-close
    svg-icon-style(grey-200)
    cursor pointer
    position absolute
    right 24px
    top 24px

  .mp-tooltip-close
    opacity 0.3
    right 20px
    top 20px

  // Learn disabled UI

  .irb-learn-disabled,
  .irb-learn-disabled-except-first-child > :not(:first-child),
  .irb-learn-disabled-except-last-child > :not(:last-child)
    opacity 0.5
    pointer-events none

  &.irb-learn-choose-event
    .irb-learn-choose-event-disabled,
    .irb-learn-choose-event-disabled-except-first-child > :not(:first-child),
    .irb-learn-choose-event-disabled-except-last-child > :not(:last-child)
      opacity 0.5
      pointer-events none

  &.irb-learn-compare-event
    .irb-learn-compare-event-disabled,
    .irb-learn-compare-event-disabled-except-first-child > :not(:first-child),
    .irb-learn-compare-event-disabled-except-last-child > :not(:last-child)
      opacity 0.5
      pointer-events none

  &.irb-learn-group-by
    .irb-learn-group-by-disabled,
    .irb-learn-group-by-disabled-except-first-child > :not(:first-child),
    .irb-learn-group-by-disabled-except-last-child > :not(:last-child)
      opacity 0.5
      pointer-events none

  &.irb-learn-manipulate-data
    .irb-learn-manipulate-data-disabled,
    .irb-learn-manipulate-data-disabled-except-first-child > :not(:first-child),
    .irb-learn-manipulate-data-disabled-except-last-child > :not(:last-child)
      opacity 0.5
      pointer-events none

  // Learn emphasis animation

  @keyframes wiggle
    10%, 90%
      transform translate3d(-1px, 0, 0)

    20%, 80%
      transform translate3d(2px, 0, 0)

    30%, 50%, 70%
      transform translate3d(-4px, 0, 0)

    40%, 60%
      transform translate3d(4px, 0, 0)

  .irb-learn-transitioning
    &.irb-learn-emphasize > :not(mp-tutorial-tooltip), .irb-learn-emphasize
      animation wiggle 0.82s cubic-bezier(.36,.07,.19,.97) 200ms both
      transform translate3d(0, 0, 0)
      backface-visibility hidden
      perspective 1000px
