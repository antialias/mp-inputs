@import "../../stylesheets/common"

.irb-header
  align-items center
  border-bottom 1px solid light-gray
  display flex
  height 60px
  margin 0 24px
  padding-top 10px

  auto-sizing-input
    display inline-block
    input
      border none
      color medium-gray
      font-size 20px
      outline none

  button
    background-color initial
    border 1px solid light-gray
    border-radius 3px
    color medium-gray
    display inline-block
    padding 5px

    &.refresh-query
      margin-right 5px

    &.save-report
      opacity 0
      transition opacity 0.3s
      &.active
        opacity 1
