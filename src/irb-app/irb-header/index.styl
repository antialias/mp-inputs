@import "../../stylesheets/common"

.irb-header
  align-items center
  border-bottom 1px solid grey-200
  display flex
  height 60px
  padding 0 20px 0 13px
  panel-top()

  // TODO: remove me
  // position/z-index are only to stack bottom-placed loading-dock tooltips above the reset query X.
  position relative
  z-index 1

  button
    background-color initial
    border 1px solid grey-300
    border-radius 3px
    color grey-500
    display inline-block
    outline none
    padding 5px

  .loading-dock
    display inline-block
    margin-left auto

    button
      border none
      border-radius 0
      height 25px
      margin-left 5px
      width 30px

      &.refresh-query,
      &.report-list-button,
      &.download
        svg-icon-style(grey-500, mp-blue)

      &.report-list-button.saved
        svg-icon-style(green-300)
      &.report-list-button.save-failed
        svg-icon-style(mp-red)

      &.download
        cursor default
        &.enabled
          cursor pointer

.error-no-project-data .irb-header
  .loading-dock
    button
      svg-icon-style(grey-500)
      cursor default

