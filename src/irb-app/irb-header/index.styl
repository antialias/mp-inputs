@import "../../stylesheets/common"

.irb-header
  align-items center
  border-bottom 1px solid light-gray
  display flex
  height 60px
  padding 0 20px 0 13px
  panel-top()

  button
    background-color initial
    border 1px solid light-gray
    border-radius 3px
    color medium-gray
    display inline-block
    outline none
    padding 5px

  .loading-dock
    display inline-block
    margin-left auto

    button
      border none
      border-radius 0
      height 25px
      margin-left 5px
      width 30px

      &.refresh-query
        svg-icon-style(grey-700, grey-500, 22px, -4px, -2px)

      &.download
        cursor default
        svg-icon-style(grey-700, grey-500, 27px, 0, -1px)
        &.enabled
          cursor pointer

      &.report-list-button
        svg-icon-style(grey-700, grey-500, 26px, 2px, 0)
