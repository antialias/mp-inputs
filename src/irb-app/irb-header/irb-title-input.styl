@import "../../stylesheets/common"

border-curve = 4px
button-height = 36px

irb-title-input
  height button-height
  position relative

  .irb-title-input
    display flex

  input[type=text], .title-input-disabled, span.mp-name-input-dummy
    background-color inherit
    border none
    color grey-700
    font-size 16px
    font-weight normal
    height button-height
    outline none
    padding 0 20px

  .title-input-disabled
    line-height button-height

  .title-input-enabled
    border 1px solid transparent
    border-radius border-curve
    display inline-flex

    button
      opacity 0
      &.title-save
        background-image linear-gradient(to top, blue-300, blue-100), linear-gradient(blue-300, blue-300)
        border 1px solid blue-700
        border-radius 0 border-curve border-curve 0
        color #fff
        cursor text
        font-size 14px
        font-weight bold
        height button-height
        transition opacity 0.3s
        width 72px

    &:hover
      background-color #fff
      border-color grey-200
      box-shadow inset 0 1px 2px 0 rgba(0, 0, 0, 0.09)

    &.input-focused
      background-color #fff
      border-color blue-300
      button
        cursor pointer
        opacity 1
