@import "../../stylesheets/common"

border-curve = 3px
button-height = 36px

active-input()
  background-color #fff
  border 1px solid border-gray
  outline none

mp-button-input
  display inline-block
  position relative

  .mp-button-input
    width 310px
    &:hover input
      active-input()

  .disabled-input, input[type=text]
    background-color inherit
    border 1px solid transparent
    border-radius border-curve
    color grey-500
    font-size 20px
    font-weight normal
    height button-height
    outline none
    padding 0 20px
    width 270px

  .disabled-input
    line-height button-height

  input[type=text]
    &:focus, &:hover
      active-input()
    &.active
      border-right none
      padding-right 10px
      width 208px

  button.input-button
    background-image linear-gradient(to top, blue-300, blue-100), linear-gradient(blue-300, blue-300)
    border 1px solid blue-700
    border-radius 0 border-curve border-curve 0
    color #fff
    cursor text
    font-weight bold
    height 38px
    opacity 0
    position absolute
    right 0
    text-transform uppercase
    top 0
    transition opacity 0.3s
    width 72px
    &.active
      cursor pointer
      opacity 1
