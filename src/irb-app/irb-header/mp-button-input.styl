@import "../../stylesheets/common"

border-curve = 3px

mp-button-input
  display inline-block
  position relative

  .mp-button-input
    width 310px

  input
    background-color inherit
    border 1px solid transparent
    border-radius border-curve
    color medium-gray
    font-size 20px
    height 36px
    outline none
    padding 0 20px
    width 270px
    &:focus, &:hover
      background-color #fff
      border 1px solid border-gray
      outline none
    &.active
      border-right none
      padding-right 10px
      width 208px

  button.input-button
    background-image linear-gradient(to top, blue-300, blue-100), linear-gradient(blue-300, blue-300)
    border 1px solid blue-700
    border-radius 0 border-curve border-curve 0
    color #fff
    font-weight bold
    height 38px
    opacity 0
    position absolute
    right 0
    text-transform uppercase
    top 0
    transition opacity 0.3s
    width 72px
    &.active
      opacity 1
