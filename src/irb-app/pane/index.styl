@import "../../stylesheets/common"

header-height = 48px

.pane-view
  background white
  border-radius 3px
  height 100%
  overflow hidden
  position relative
  width 100%

  &::before // header background color
    content ''
    background blue-300
    height header-height
    width 100%
    position absolute

  .pane
    position absolute
    width 500px

  .header
    color white
    font-size 15px
    font-weight bold
    line-height header-height
    position relative
    text-align center
    text-transform uppercase
    width 100%

    .back
      background none
      border none
      left 0
      padding 6px 8px
      position absolute
      top 6px
      transform scaleX(-1)

      &::before
        color white
        content 'âž”'
        font-size 20px

  .search
    position relative

    &::before
      border 1px solid medium-gray
      border-radius 10px
      content ''
      height 10px
      left 10px
      position absolute
      top 17px
      width 10px

    &::after
      content ''
      background medium-gray
      height 2px
      position absolute
      top 28px
      left 19px
      transform rotate(45deg)
      width 5px

    input
      background lighten(background-gray, 50%)
      border none
      border-bottom 1px solid background-gray
      color dark-gray
      font-size 12px
      font-weight 500
      height 48px
      margin 0
      outline none
      padding 0
      text-indent 32px
      width 100%

  .content
    height 372px

    .pane-content-view
      height 100%

  .search + .content
    height 327px

  .content
    ul.column
      display inline-block
      height 95%
      padding 6px 0
      overflow scroll
      font-size 14px

      &::-webkit-scrollbar
        display none

      &:not(:last-child)
        border-right 1px solid light-gray

      &.toggle
        font-size 11px
        font-weight 500
        line-height 1.8
        text-transform uppercase
        width 100px
        &.resource-type
          width 112px

      li
        cursor pointer
        padding 5px 20px

        &.custom
          pane-icon('custom-event')

        &.selected, &:hover
          color grey-900

        &:hover
          background-color grey-100
          color blue-300

        &.disabled
          opacity .5
          pointer-events none

      &.resource-value li
        font-size 13px
        font-weight 500
        line-height 1.5
        overflow hidden
        padding-left 32px
        padding-right 32px
        position relative
        text-overflow ellipsis

        &.property
          &::after
            content ''
            height 14px
            position absolute
            right 24px
            top 7px
            width 14px

          &.events
            pane-icon('event')

          &.people
            pane-icon('people')

          &.type-string::after
            background url("~assets/properties/types/string.svg")

          &.type-number::after
            background url("~assets/properties/types/number.svg")

          &.type-boolean::after
            background url("~assets/properties/types/boolean.svg")

          &.type-list::after
            background url("~assets/properties/types/list.svg")

          &.type-datetime::after
            background url("~assets/properties/types/datetime.svg")


        .next-arrow
          background none
          border none
          color inherit
          font-size 24px
          height 27px
          position absolute
          right 0
          text-align center
          top -4px
          width 27px

  button.commit
    background lighten(background-gray, 50%)
    border none
    border-top 1px solid background-gray
    bottom 0
    color medium-gray
    font-size 14px
    font-weight bold
    height 36px
    position absolute
    width 100%

.pane-container .pane
  transition transform 0.2s
