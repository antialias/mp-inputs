- const learnStep = learnActive && util.getLearnStep(learnModalStepIndex, report);
- const learnClass = learnStep && learnStep.cls;

.irb-app(class={
  'error-no-project-data': !projectHasEvents,
  'irb-learn-active': !!learnActive,
  [learnClass]: !!learnClass,
})
  if learnActive
    = $component.child('irb-learn')
  .irb-main-panel.top-panel
    = $component.child('irb-header')
    = $component.child(`new-irb-builder`)
  .irb-main-panel.bottom-panel
    = $component.child('irb-result')
