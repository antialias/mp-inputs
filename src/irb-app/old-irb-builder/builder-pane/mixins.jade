include ../../mixins.jade

mixin property-entry(property, selected)
  - const propName = util.renameProperty(property.name)
  - const matches = $helpers.searchMatches(propName)
  if !!matches
    li.property(
      class=[`type-${property.type}`, property.resourceType]
      class={selected}
      onclick=() => $helpers.selectProperty(property)
    )
      - const icon = $helpers.resourceIcon(property.resourceType)
      - const attrs = !!icon ? {icon} : {empty: true}
      svg-icon(attributes=attrs)
      +highlight-matches(matches)
