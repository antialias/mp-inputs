.pane-content.custom-date-pane-content
  .filter-value-input
    - const selectedValue = $helpers.getActiveClauseProperty('value');
    - const from = Array.isArray(selectedValue) ? selectedValue[0] : null;
    - const to = Array.isArray(selectedValue) ? selectedValue[1] : null;
    mp-calendar(
      attrs={range: true}
      props={value: JSON.stringify({from, to})}
      on={change: $helpers.selectDateRange}
    )
  .date-unit-select
    h4 Display unit
    ol.toggle
      - const selectedUnit = $helpers.getActiveClauseProperty('unit');
      each unit in $component.constants.unitChoices
        li(
          class={selected: unit === selectedUnit}
          on={click: () => $helpers.selectUnit(unit)}
        )= unit
