@import "../../../stylesheets/common"

animation-time = .25s

.irb-new-control.new-query-builder
  position relative

  .control-buttons
    align-items center
    display flex

    button
      background transparent
      border-width 0
      font-weight 500
      height 36px
      padding 0

    button.control-label, input.control-label
      border none
      border-bottom 1px dotted grey-500
      color mp-blue
      font-family font-helvetica-neue
      font-size 16px

      &:hover
        border-bottom 1px solid mp-blue

    &:hover
      color blue-300

  &.pane-open .add-control
    button.control-label
      text-align left
      transition width animation-time, transform animation-time
      width 200px

      .label-preposition
        visibility visible


    button.add-button
      svg-icon svg
        transform rotate(45deg)

  button.remove
    background none
    border none
    color grey-300
    font-weight 600
    opacity 0
    position absolute
    right -5px
    top -15px
    transition opacity .1s

    &::after
      content 'âœ•'

    &:hover
      color grey-700

  &:hover button.remove
    opacity 1

show-edit-control .irb-control
  min-width 60px

group-edit-control .irb-control
  min-width 65px
