@import "../../../stylesheets/common"

.irb-new-control.new-query-builder
  position relative

  .control-buttons
    align-items center
    cursor pointer
    display flex
    height 36px

    button
      background transparent
      border-width 0
      font-weight 500
      padding 0

    .control-label, resize-input.control-label input
      border-bottom 1px dotted mp-blue
      border-radius 0
      color mp-blue
      font-family font-helvetica-neue
      font-size 16px
      font-weight 500
      line-height 30px
      padding-left 0
      padding-right 0

      &:hover
        border-bottom-style solid

    resize-input.control-label input
      border none
      border-bottom 1px dotted mp-blue
      border-radius 0
      align-items center
      display flex

    .control-label
      align-items center
      box-sizing border-box
      display flex
      height 100%

    &:hover
      color blue-300

  &.pane-open
    .control-label, resize-input.control-label input
      border-bottom-style solid

    .add-control
      .control-label
        text-align left
        transition width input-animation-time, transform input-animation-time
        width 200px

        .label-preposition
          visibility visible


    button.add-button
      svg-icon svg
        transform rotate(45deg)

show-edit-control .irb-control
  min-width 60px

group-edit-control .irb-control
  min-width 65px
