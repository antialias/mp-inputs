@import "../../../stylesheets/common"

option-height = 30px

.builder-view
  border-radius 5px
  overflow hidden
  transition width .25s, height .25s

  .builder-offset-container
    display flex
    transition transform .25s

  .builder-section
    display flex
    flex-direction column
    max-height 486px
    overflow auto
    width 320px



    .section-title
      align-items center
      background-color grey-150
      color grey-700
      display flex
      flex none
      font-size 11px
      font-weight 900
      height 48px
      position relative

      .title-button
        cursor pointer
        padding 10px
        position absolute
        svg-icon-style(grey-500, grey-700)

        &.close-button
          right 0

      .title-label
        text-align center
        text-transform uppercase
        width 100%

    ul.section-options
      flex 1 1
      margin 10px

    li.section-option
      align-items center
      border-radius 3px
      cursor pointer
      font-size 12px
      font-weight 500
      display flex
      height option-height
      justify-content flex-end

      .label
        padding-left 10px
        ellipsis()
        flex 1 1

      .secondary-action
        align-items center
        display none
        flex none
        padding 0 10px
        margin-right 10px

        &.pill
          background-color grey-50
          border-radius 40px
          color grey-500
          font-size 10px
          font-weight 900
          height 18px

          .secondary-label
            vertical-align middle

          .caret-icon
            svg-icon-style(grey-500, size: 16px, speed: 0s, pos-top: 1px)

          &:hover
            background-color mp-blue
            color #fff
            svg-icon-style(#fff, speed: 0s, pos-top: 1px)

      &:hover
        background-color grey-100
        color mp-blue

        .secondary-action
          display flex

    &.sources
        width 260px

        li.section-option
          font-size 11px
          font-weight 900
          svg-icon-style(mp-blue, size: 16px, speed: 0s)
          text-transform uppercase

          svg-icon
            visibility hidden

          &:hover svg-icon
            visibility visible

