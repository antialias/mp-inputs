@import "../../../stylesheets/common"

option-height = 30px

.builder-view
  .builder-section
    width 320px
    max-height 486px
    overflow auto

  ul.section-options
    margin 10px

  li.section-option
    align-items center
    border-radius 3px
    cursor pointer
    font-size 12px
    font-weight 500
    display flex
    height option-height
    justify-content flex-end
    padding 0 10px

    .label
      flex 1 1
      ellipsis()

    .secondary-action
      align-items center
      display none
      flex none
      padding 0 10px

      &.caret
        height option-height


      &.pill
        background-color grey-50
        border-radius 40px
        color grey-500
        font-size 10px
        font-weight 900
        height 18px

        &:hover
          background-color mp-blue
          color #fff

    &:hover
      background-color grey-100
      color mp-blue

      .secondary-action
        display flex

  .sources
    .builder-section
      width 260px

      li.section-option
        font-size 11px
        font-weight 900
