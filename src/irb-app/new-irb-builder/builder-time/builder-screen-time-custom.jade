include ../../mixins.jade
include ../mixins.jade

- const {from, to} = $helpers.getDates();

.builder-screen.time-custom
  +screen-title('Choose a date range', {backButton: true})
  .range-control
    .range-inputs
      date-input(props={value: from} on={change: $helpers.changedFrom})
      .preposition to
      date-input(props={value: to} on={change: $helpers.changedTo})
    .range-calendar
      irb-calendar(
        attrs={range: true}
        props={value: JSON.stringify({from, to})}
        on={change: $helpers.changedDates}
      )
  .unit-control
    .builder-label Time unit
    +tabs($helpers.UNITS, {
      selected: $helpers.getStageClauseAttr('unit'),
      onclick: $helpers.clickedUnit,
    })
