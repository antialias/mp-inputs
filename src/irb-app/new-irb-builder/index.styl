@import "../../stylesheets/common"

.irb-builder
  clearfix()
  font-size 16px
  font-weight 500
  padding 34px 36px 18px 36px
  position relative

  h3
    color grey-300
    font-size 12px
    font-weight 500
    height 15px
    margin-bottom 8px
    text-transform uppercase

  .preposition
    color grey-300
    margin-top 30px
    margin-right 12px

  .filters .preposition
    margin-top 6px

  .query, .filters
    clearfix()

    .clause, .preposition, .control-container
      float left

    .clause
      margin-bottom 18px
      margin-right 12px

      .clause-header
        height 15px
        margin-bottom 8px

      .control-container
        .preposition
          float initial
          margin 0

        +
          .control-container, .preposition
            margin-left 12px

  .filters
    margin 0 24px

  .section.disabled
    opacity 0.3
    pointer-events none

  .reset-query
    cursor pointer
    position absolute
    right 20px
    top 20px
    svg-icon-style(grey-700, grey-500)

.error-no-project-data .irb-builder
  .builder-error-caption
    color grey-700
    font-size 14px
    text-align center
    padding 5px 0

  .error-title
    color grey-900
    font-size 16px
    font-weight 900

  .error-builder-button
    display flex
    justify-content center
    margin 20px 0


