include ../mixins.jade

mixin generic-options-list-item(label, options)
  li.list-option(onclick= options.onclick)
    +screen-option(label)
    +small-caret-icon()

mixin secondary-action-pill(label, options)
  .option-secondary-action.pill(onclick=options.onclick)
    span.secondary-label= label
    +small-caret-icon()

mixin screen-option(label, options)
  - options = options || {}
  if options.icon
    .option-icon
      svg-icon(attributes={icon: options.icon})
  .option-label= label

mixin screen-title(title, options)
  - options = options || {}
  .screen-title
    .title-label= title
    if options.backButton
      .title-button.back-button(onclick=$helpers.clickedBackButton)
        svg-icon(attributes={icon: 'caret-left'})
    if options.closeButton
      .title-button.close-button(onclick=$helpers.closePane)
        svg-icon(attributes={icon: 'x'})

mixin screen-footer-button(label, options)
  - options = options || {}
  button.screen-footer(onclick=options.onclick)= label

mixin property-list(properties, options)
  ul.screen-options-list(onscroll=options.scrolledList)
    if properties.length
      for property in properties
        li.list-option(onclick=() => options.clickedProperty(property))
          +screen-option(util.renameProperty(property.name), {
            icon: util.getIconForProperty(property)
          })
    else if !options.loading
      li.list-option.list-empty no properties available
