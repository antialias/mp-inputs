@import "../../../stylesheets/common"
transition-time = .25s

.builder-pane
  border-radius 5px
  overflow hidden
  transition width transition-time, height transition-time

  .builder-pane-offset
    display flex
    transition transform transition-time

  .builder-screen
    display flex
    flex-direction column
    max-height 486px
    width 320px

    &.sources, &.math

        li.list-option
          font-size 11px
          font-weight 900
          text-transform uppercase

          .caret-icon
            svg-icon-style(mp-blue, speed: 0s)
            visibility hidden

          &:hover .caret-icon
            visibility visible

    &.sources
        width 260px

    &.math
      width 110px

  .builder-label
    color grey-700
    font-size 11px
    font-weight 600
    margin-top 12px
    text-transform uppercase
