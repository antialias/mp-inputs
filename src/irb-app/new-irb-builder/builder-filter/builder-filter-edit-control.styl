@import '../../../stylesheets/common'

builder-filter-edit-control
  .control-container .irb-new-control.new-query-builder
    .edit-control
      margin-right 6px

      .control-label
        border-bottom none
        color grey-700
        font-size 14px

        .edit-label-part
          margin-right 4px
          &:nth-child(odd)
            color grey-700
          &:nth-child(even)
            color grey-500

      input.control-label
        border-bottom 1px solid mp-blue

      button.remove
        right 15px
        top 2px
