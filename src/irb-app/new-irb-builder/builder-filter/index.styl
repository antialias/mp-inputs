.builder-search-input
  border none
  font-size 13px
  width 0
  transition width 0.25s
  &.search-active
    border-bottom 1px dotted grey-500
    margin-right 10px
    width 200px
    &:hover
      border-bottom 1px solid mp-blue

builder-filter-add-control
  .add-filter
    display inline-block

    .add-filter-controls
      display flex
      .add-filter-button
        align-items center
        background none
        border 2px solid grey-150
        border-radius 5px
        color grey-900
        display flex
        font-size 13px
        padding 7px 8px
        svg-icon-style(grey-700, blue-300)

builder-filter-edit-control
  .irb-control button.modify
    font-size 13px

