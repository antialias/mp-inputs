.builder-section.builder-show
  for clause, clauseIdx in report.sections.show.clauses
    if clauseIdx
      .clause-container
        .clause-langauge.preposition and
    .clause-container
      .clause-header
        .preposition Show
        .header-controls Total
      .clause-body
        if clause.property
          .control-container= $component.child('builder-numeric-property-edit-control', {attributes: {'clause-index': clauseIdx}})
          .clause-langauge.preposition on
        .control-container= $component.child('builder-show-edit-control', {attributes: {'clause-index': clauseIdx}})
