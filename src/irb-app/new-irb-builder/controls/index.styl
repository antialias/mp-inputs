@import "../../../stylesheets/common"

.irb-new-control.new-query-builder
  position relative

  .control-buttons
    display flex
    align-items center

    button
      border-width 0
      background transparent
      font-weight 500
      height 36px
      padding 0

    button.control-label
      border-bottom 1px dotted grey-500
      color blue-700
      font-family font-helvetica-neue
      font-size 16px

      &:hover
        border-bottom 1px solid blue-700

    &:hover
      color blue-300

  .add-control
    button.control-label
      width 0px
      transition .25s

      .label-preposition
        color grey-300
        visibility hidden

    button.modify
      align-items center
      background-color grey-50
      border 1px solid grey-150
      border-radius 50%
      box-shadow 0 1px 1px 0 rgba(76, 96, 113, 0.08)
      display flex
      height 28px
      justify-content center
      margin-left 2px
      svg-icon-style(grey-700, size: 16px)
      width 28px
      &:hover
        svg-icon-style(mp-blue, size: 16px)

  &.pane-open .add-control
    button.control-label
      text-align left
      width 200px

      .label-preposition
        visibility visible


    button.modify
      svg-icon svg
        transform rotate(45deg)

  button.remove
    background none
    border none
    color grey-300
    font-weight 600
    opacity 0
    position absolute
    right -6px
    top -10px
    transition opacity .1s

    &::after
      content 'âœ•'

    &:hover
      color grey-700

  &:hover button.remove
    opacity 1

  .drop-menu
    position relative
    top 6px

show-edit-control .irb-control
  min-width 60px

group-edit-control .irb-control
  min-width 65px
