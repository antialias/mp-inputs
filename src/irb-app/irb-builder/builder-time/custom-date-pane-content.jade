.pane-content.custom-date-pane-content
  .filter-value-input
    mp-calendar(
      attributes={range: true}
      onchange=$helpers.selectDateRange
    )
  .date-unit-select
    h4 Display unit
    ol.toggle
      for unit in $component.constants.unitChoices
        li(onclick=() => $helpers.selectUnit(unit))= unit
