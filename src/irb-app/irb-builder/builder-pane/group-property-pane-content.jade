include ./mixins.jade

.property.pane-content
  ul.column.toggle.resource-type
    for resourceType in $component.resourceTypeChoices
      li(
        class={selected: resourceType === resourceTypeFilter}
        onclick=() => $helpers.updateResourceTypeFilter(resourceType)
      )= util.capitalize(resourceType)
  ul.column.resource-value
    for property in $helpers.topProperties()
      +property-entry(property, $helpers.isSelectedProperty(property))
