div
  if $component.isAttributeEnabled(`open`)
    .builder-pane(style=builderPane.sizeStyle class={remove: {delayRemove: 400}})
      .builder-pane-offset(style=builderPane.offsetStyle)
        each screen, screenIdx in builderPane.screens
          = $component.child(screen.componentName, {attrs: $helpers.screenAttrs(screenIdx)})
