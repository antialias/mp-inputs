@import "../../stylesheets/common"

.irb-builder
  clearfix()
  font-size 16px
  font-weight 500
  padding 34px 36px 18px 36px

  h3
    color light-gray
    font-size 12px
    font-weight 500
    height 15px
    margin-bottom 8px
    text-transform uppercase

  .preposition
    color light-gray
    margin-top 30px
    margin-right 12px

  .filters .preposition
    margin-top 6px

  .query, .filters
    clearfix()

    .clause, .preposition, .control-container
      float left

    .clause
      margin-right 12px
      margin-bottom 18px

      .clause-header
        height 15px
        margin-bottom 8px

      .control-container
        .preposition
          float initial
          margin 0

        +
          .control-container, .preposition
            margin-left 12px

  .filters
    margin 0 24px

  .section.disabled
    opacity 0.3
    pointer-events none
