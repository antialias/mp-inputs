@import "~pikaday/css/pikaday.css"
@import "../../../stylesheets/common"

.pika-mixpanel
  &.pika-single
    border none
    border-radius 10px
    box-shadow 0px 10px 15px 0 rgba(0, 0, 0, 0.09), 0px 17px 50px 0 rgba(0, 0, 0, 0.19)
    height 283px
    width 492px

    &::after
      border 10px solid transparent
      border-bottom-color white
      content ''
      display block
      left 231px
      position absolute
      top -19px
      width 0

    .pika-lendar
      padding 8px
      width 210px
      
      &:first-child:after
        background-color grey-150
        content ''
        display block
        height 198px
        left calc(50% - 1px)
        position absolute
        top 60px
        width 1px

    .pika-title
      color grey-900
      font-size 14px
      margin-bottom 7px
      text-align center

      .pika-prev
        background-color grey-500
        background-image none
        border-radius 20px
        height 24px
        left 5px
        position absolute
        text-indent 50px
        top 2px
        width 24px

        &::before
          background-color white
          content ''
          display block
          height 30px
          left -4px
          mask url("~mixpanel-common/assets/icons/caret_left.svg") no-repeat center
          position relative
          top -3px
          width 30px

      .pika-next
        background-color grey-500
        background-image none
        border-radius 20px
        height 24px
        left 187px
        position absolute
        text-indent 50px
        top 2px
        width 24px

        &::before
          background-color white
          content ''
          display block
          height 30px
          left -2px
          mask url("~mixpanel-common/assets/icons/caret_right.svg") no-repeat center
          position relative
          top -3px
          width 30px


    .pika-table
      th
        color grey-700
        padding-bottom 8px

      tbody
        left 1px
        position relative
        top 1px

      td:not(.is-startrange):not(.is-endrange):not(.is-disabled):not(.is-outside-current-month)
        &:hover
          background-color grey-100
          border-radius 15px
          width 30px

      .pika-button
        background-color transparent
        color grey-700
        font-weight bold
        height 30px
        left -1px
        position relative
        text-align center
        top -1px

      .is-startrange:not(.is-outside-current-month),
      .is-endrange:not(.is-outside-current-month)
        background-color blue-300
        border-radius 15px
        width 30px

        .pika-button
          color white
          text-shadow 0.5px 0.9px 0 rgba(0, 0, 0, 0.26)

      .is-inrange .pika-button
          color grey-900

      .is-disabled .pika-button
        opacity 0.5
