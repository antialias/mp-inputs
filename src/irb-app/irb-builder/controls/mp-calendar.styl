@import "~pikaday/css/pikaday.css"
@import "../../../stylesheets/common"

.pika-mixpanel
  &.pika-single
    border none
    border-radius 10px
    box-shadow 0px 3px 10px -4px black
    height 290px
    width 492px

    .pika-lendar
      margin 18px
      width 210px

    .pika-title
      color grey-900
      font-size 14px
      margin-bottom 7px

    .pika-table
      th
        color grey-700
        text-transform uppercase
        padding-bottom 8px

      .pika-button
        background-color transparent
        color grey-700
        font-weight bold
        height 30px
        text-align center

      .is-startrange, .is-endrange
        :not(.is-outside-current-month)
          background-color blue-300
          border-radius 15px
          left -4px
          position relative


        .pika-button
          color #ffffff
          text-align center
          text-shadow 0.5px 0.9px 0 rgba(0, 0, 0, 0.26)

      .is-disabled .pika-button
        opacity 0.5
