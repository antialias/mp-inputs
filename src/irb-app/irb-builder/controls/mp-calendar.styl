@import "~pikaday/css/pikaday.css"
@import "../../../stylesheets/common"

.pika-mixpanel
  &.pika-single
    border none
    border-radius 10px
    box-shadow 0px 3px 10px -4px black

    .pika-title
      color grey-900
      font-size 14px

    .pika-table
      th
        color grey-700
        text-transform uppercase

      .pika-button
        background-color transparent
        color grey-700
        font-weight bold

      .is-disabled .pika-button
        opacity 0.5
