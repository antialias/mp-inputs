- const selectedMath = stageClause && stageClause.math;
- const selectedResourceType = stageClause && stageClause.resourceType;
- const selectedValue = stageClause && stageClause.value;

.show-pane-content
  ul.column.toggle.math
    for math in $component.constants.mathChoices
      li(
        class={
          selected: math === selectedMath,
          disabled: math === 'sum' || math === 'median',
        }
        onclick=() => $helpers.updateStageClause({math})
      )= util.capitalize(math)
  ul.column.toggle.resource-type
    for resourceType in $component.resourceTypeChoices
      li(
        class={
          selected: resourceType === selectedResourceType,
          disabled: resourceType !== 'all',
        }
        onclick=() => $helpers.updateStageClause({resourceType})
      )= util.capitalize(resourceType)
  ul.column.resource-value
    for value in $component.constants.eventChoices
      if $helpers.matchesSearch(util.renameEvent(value))
        li(class={selected: value === selectedValue})
          span(onclick=() => $helpers.updateStageClause({value}, true))= util.renameEvent(value)
