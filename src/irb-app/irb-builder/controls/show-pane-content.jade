.show-pane-content
  ul.column.toggle.math
    for math in $component.constants.mathChoices
      li(
        class=[math === selectedMath ? 'selected' : '', (math === 'sum' || math === 'median') ? 'disabled' : '']
        onclick=() => $helpers.updateStageClause({math})
      )= util.capitalize(math)
  ul.column.toggle.resource-type
    for resourceType in $component.constants.resourceTypeChoices
      li(
        class=[resourceType === selectedResourceType ? 'selected' : '', resourceType !== 'all' ? 'disabled' : '']
        onclick=() => $helpers.updateStageClause({resourceType})
      )= util.capitalize(resourceType)
  ul.column.resource-value
    for value in $component.constants.eventChoices
      if $helpers.matchesSearch(util.renameEvent(value))
