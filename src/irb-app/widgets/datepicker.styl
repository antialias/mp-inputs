@import "../../stylesheets/common"

irb-datepicker
  .inputs
    display flex
    padding-bottom 20px

    date-input
      flex 1

      .date-input  // container
        display flex

        input
          flex 1
          border-radius 4px
          border 1px solid grey-150
          font-size 12px
          color grey-700
          padding 10px 12px

    .preposition
      background-color grey-100
      border-radius 3px
      color grey-700
      font-size 11px
      font-weight 800
      margin 0 12px
      padding 12px
      text-transform uppercase

  .calendar
    mp-box-shadow(2)
    min-height 320px

    calendar, .pika-mixpanel
      display inline-block

      &::after
        display none

      &, .pika-select
        z-index 0
