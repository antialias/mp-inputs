@import "../stylesheets/common"

.irb-app
  border-radius 5px
  margin-bottom 0

  &.error-no-project-data
    display flex
    flex-direction column
    height 100vh

    .irb-main-panel
      &.top-panel
        flex none
      &.bottom-panel
        flex 1 1

.irb-main-panel
  background-color #fff
  border-radius 5px
  box-shadow 0px 1px 1.8px 0.2px rgba(69, 81, 113, 0.15)
  margin 20px
