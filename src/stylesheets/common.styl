@import "~mixpanel-common/stylesheets/common.styl"

border-gray = grey-200
header-gray = grey-100

font-helvetica-neue = 'Helvetica Neue', Helvetica, Arial, sans-serif

segment-color-1 = mp-navy
segment-color-2 = mp-ultramarine
segment-color-3 = blue-300
segment-color-4 = mp-turquoise
segment-color-5 = mp-seafoam
segment-color-6 = mp-aquamarine
segment-color-7 = mp-orange
segment-color-8 = mp-yellow

:export
  grey-150 grey-150
  segment-color-1 segment-color-1
  segment-color-2 segment-color-2
  segment-color-3 segment-color-3
  segment-color-4 segment-color-4
  segment-color-5 segment-color-5
  segment-color-6 segment-color-6
  segment-color-7 segment-color-7
  segment-color-8 segment-color-8

span.substr.matches-search
  color grey-900
  font-weight 600

bg-img(image, width=null, height=null)
  background-image url('~assets/images/' + image)
  background-repeat no-repeat
  if width != null && height != null
      background-size width height
      width width
      height height

bg-img-with-2x(original_image, two_times_image, width, height)
  bg-img(original_image, width, height)
  @media only screen and (min-device-pixel-ratio: 2),
    (device-pixel-ratio: 2),
    (device-pixel-ratio 2/1),
    (min-device-pixel-ratio 2),
    (min-resolution 192dpi),
    (min-resolution 2dppx)
     bg-img(two_times_image)

bottom-shadow()
  box-shadow 0px 1px 1.8px 0.2px rgba(69, 81, 113, 0.2)

clearfix()
  &::after
    content ""
    display table
    clear both

ellipsis()
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

loader()
  animation load8 1.1s infinite linear
  border-bottom 1.1em solid rgba(200, 200, 200, 0.2)
  border-left 1.1em solid grey-500
  border-right 1.1em solid rgba(200, 200, 200, 0.2)
  border-top 1.1em solid rgba(200, 200, 200, 0.2)
  font-size 10px
  margin 60px auto
  margin-left -5em
  position relative
  text-indent -9999em
  transform translateZ(0)

  &, &::after
    border-radius 50%
    height 10em
    width 10em

  @keyframes load8
    0%
      transform rotate(0deg)
    100%
      transform rotate(360deg)

panel-top()
  background-color header-gray
  border-radius 5px 5px 0 0
  box-shadow inset 0px 1px #fff

svg-height(height)
  svg-icon
    height height
    svg, path
      height height
