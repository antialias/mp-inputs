@import "~mixpanel-common/stylesheets/common.styl"

background-gray = #e4e5e9
light-gray = #c4c8d6
medium-gray = #92949d
dark-gray = #646670

font-helvetica-neue = 'Helvetica Neue', Helvetica, Arial, sans-serif

clearfix()
  &::after
    content ""
    display table
    clear both

bottom-shadow()
  box-shadow 0px 1px 1.8px 0.2px rgba(69, 81, 113, 0.2)

loader()
  animation load8 1.1s infinite linear
  border-bottom 1.1em solid rgba(200, 200, 200, 0.2)
  border-left 1.1em solid medium-gray
  border-right 1.1em solid rgba(200, 200, 200, 0.2)
  border-top 1.1em solid rgba(200, 200, 200, 0.2)
  font-size 10px
  margin 60px auto
  margin-left -5em
  position relative
  text-indent -9999em
  transform translateZ(0)

  &, &::after
    border-radius 50%
    height 10em
    width 10em

  @keyframes load8
    0%
      transform rotate(0deg)
    100%
      transform rotate(360deg)

ellipsis()
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
