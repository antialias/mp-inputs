@import "../../../stylesheets/common"

.irb-pane
  background white
  border-radius 3px
  box-shadow 0px 3px 10px -4px black
  left -1px
  position absolute
  top 40px
  width 400px
  z-index 1

  .header, .footer
    line-height 36px
    text-align center
    width 100%

  .header
    background medium-gray
    border-radius 3px 3px 0 0
    color white

  .footer
    background background-gray
    border-radius 0 0 3px 3px

  .body
    height 250px

  input
    background lighten(background-gray, 50%)
    border none
    height 32px
    margin 0
    padding 0
    width 100%
