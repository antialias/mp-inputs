@import "../../../stylesheets/common"

.show-pane-view,
.time-pane-view,
.group-pane-view,
.filter-pane-view
  background white
  border-radius 3px
  height 100%
  overflow hidden
  position relative
  width 100%

  &::before // header background color
    content ''
    background medium-gray
    height 36px
    width 100%
    position absolute

  .pane
    position absolute
    width 400px

  .header, .footer
    line-height 36px
    text-align center
    width 100%

  .header
    color white
    position relative

    .back
      background none
      border none
      left 0
      padding 6px 8px
      position absolute
      transform scaleX(-1)

      &::before
        color white
        content 'âž”'
        font-size 20px

  .search
    position relative

    &::before
      border 1px solid medium-gray
      border-radius 12px
      content ''
      height 12px
      left 10px
      position absolute
      top 10px
      width 12px

    &::after
      content ''
      background medium-gray
      height 2px
      position absolute
      top 23px
      left 21px
      transform rotate(45deg)
      width 6px

    input
      background lighten(background-gray, 50%)
      border none
      color dark-gray
      font-size 16px
      height 36px
      margin 0
      outline none
      padding 0
      text-indent 32px
      width 100%

  .content
    height 264px

    ul
      display inline-block
      height 100%
      padding-top 4px
      overflow scroll

      &::-webkit-scrollbar
        display none

      &:first-child
        text-align right

      &:not(:last-child)
        border-right 1px solid light-gray

      li
        cursor pointer
        padding 4px 12px

        &.selected, &:hover
          color dark-gray

  .footer
    background background-gray

.time-pane-view
  overflow visible

.pane-container.visible .pane
  transition transform 0.2s

