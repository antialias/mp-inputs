@import "../../../stylesheets/common"

.show-pane-view, .time-pane-view, .group-pane-view
  background white
  border-radius 3px
  box-shadow 0px 3px 10px -4px black
  left -1px
  position absolute
  top 40px
  width 400px
  z-index 1

  .header, .footer
    line-height 36px
    text-align center
    width 100%

  .header
    background medium-gray
    border-radius 3px 3px 0 0
    color white

  .search input
    background lighten(background-gray, 50%)
    border none
    height 32px
    margin 0
    padding 0
    width 100%

  .content
    height 250px

    > div
      height 100%

    ul
      float left
      height 100%
      padding-top 4px

      &:not(:last-child)
        border-right 1px solid light-gray

      li
        cursor pointer
        padding 4px 12px
        text-align right

        &.selected, &:hover
          color dark-gray

  .footer
    background background-gray
    border-radius 0 0 3px 3px

