@import "../../../stylesheets/common"

.builder-view
  clearfix()
  font-size 16px
  font-weight 500
  padding 24px 36px

  h3
    color light-grey
    font-size 12px
    font-weight 500
    height 15px
    margin-bottom 8px
    text-transform uppercase

  .preposition
    color light-gray
    margin-top 30px
    margin-right 12px

  .query
    clearfix()

    .clause, .preposition, .control-container
      float left

    .clause
      margin-right 12px

      .preposition
        float initial
        margin 0

      .control-container + .control-container
        margin-left 12px

  .filters
    margin 16px 24px
