@import "../../../stylesheets/common"

.show-add-control-view,
.show-edit-control-view,
.time-edit-control-view,
.group-add-control-view,
.group-edit-control-view,
.filter-add-control-view,
.filter-edit-control-view
  button.modify
    background transparent
    border 1px solid light-gray
    color dark-gray
    font-size 16px
    font-weight 500
    margin-top -1px
    padding 8px 10px

    &:hover
      color darken(dark-gray, 30%)
      border-color medium-gray

  &.noun button.modify
    border-width 0
    border-bottom-width 1px
    padding 8px 0

  &.verb button.modify
    border-radius 2px
    font-size 14px
    margin-top -2px

    &::before
      color light-gray
      content '+'
      display inline-block
      font-size 18px
      font-weight 600
      margin-right 4px
      margin-top -4px

  &.noun, &.verb
    float left
    position relative

  button.remove
    background none
    border none
    color light-gray
    font-weight 600
    position absolute
    right -6px
    top -24px

    &::after
      content 'âœ•'

    &:hover
      color dark-gray

  .pane-container
    box-shadow 0px 3px 10px -4px black
    position absolute
    top 40px
    z-index 2

    &.hidden
      opacity 0
      pointer-events none

    &.visible
      opacity 1

.show-edit-control-view
  min-width 60px

.group-edit-control-view
  min-width 65px

.filter-edit-control-view
  button.remove
    top -10px
