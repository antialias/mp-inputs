.section(class=elementClass)
  if !state.showSection.length
    .clause.comparison
      h3
      .control-container= views.addControl(state)
  else
    for comparison, clauseIndex in state.showSection
      if clauseIndex
        .preposition and
      .clause.comparison
        h3= 'Show' + (state.showSection.length === 1 ? '' : ' ' + (clauseIndex + 1))
        .control-container= views.editControl(util.extend(state, {clauseIndex}))
        if clauseIndex === state.showSection.length - 1
          .control-container= views.addControl(state)
