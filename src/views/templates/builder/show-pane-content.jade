- let selectedMathIndex = state.editing && constants.mathChoices.indexOf(state.editing.math);
- let selectedTypeIndex = state.editing && constants.resourceTypeChoices.indexOf(state.editing.type);
- let selectedValueIndex = state.editing && state.events.indexOf(state.editing.value);

div(class=className)
  ul.column.math
    for math, i in constants.mathChoices
      li(
        class=selectedMathIndex === i ? 'selected' : '',
        ev-click=() => helpers.updateSection(props.index, {math}),
      )= helpers.capitalize(math)
  ul.column.resourceType
    for type, i in constants.resourceTypeChoices
      li(
        class=selectedTypeIndex === i ? 'selected' : '',
        ev-click=() => helpers.updateSection(props.index, {type}),
      )= helpers.capitalize(type)
  ul.column.resourceValue
    for value, i in state.events
      if helpers.matchesSearch(helpers.renameEvent(value))
        li(
          class=selectedValueIndex === i ? 'selected' : '',
          ev-click=() => helpers.updateSection(props.index, {value}),
        )= helpers.renameEvent(value)
