@import "../../../stylesheets/common"

.insights-new-control.new-query-builder
  position relative

  .control-buttons
    align-items center
    cursor pointer
    display flex
    height 36px

    &.edit-control
      button
        background transparent
        border-width 0
        font-weight 500
        opacity 0
        padding 0
        position absolute
        right 0
        svg-icon-style(grey-700, grey-500, size: 16px)
        &.remove
          top -2px
          right 2px

      &:not(.time-edit-control) .resize-input
        padding-left 20px

      &:hover
        button
          opacity 1

    .control-label, .control-label input
      background-color transparent
      border-radius 0
      color mp-blue
      font-family font-helvetica-neue
      font-size 16px
      font-weight 500
      line-height 30px
      padding-left 0
      padding-right 0

    .control-label
      dotted-border-bottom(mp-blue)

      &:hover
        border-bottom-style solid

    .control-label input
      border none
      border-radius 0
      align-items center
      display flex

    .control-label
      align-items center
      box-sizing border-box
      display flex
      height 100%
      .control-label-text
        white-space nowrap

    .dataset-label-wrapper
      border-bottom 1px solid mp-blue
      line-height 35px
      margin-right -1px
      padding-right 5px

      .dataset-label
        color mp-blue
        left: 20px
        position: relative

    &:hover
      color blue-300

  &.pane-open
    .control-label
      border-bottom-style solid

    .add-control
      .control-label
        text-align left

        .label-preposition
          visibility visible


    button.add-button
      svg-icon svg
        transform rotate(45deg)

show-edit-control .insights-control
  min-width 60px

group-edit-control .insights-control
  min-width 65px
