@import "../../../stylesheets/common"
transition-time = .125s

.builder-pane
  border-radius 5px
  min-height 50px
  overflow hidden

  builder-screen-contextual
    flex-shrink 0

  .builder-pane-offset
    display flex
    transition transform transition-time

  .builder-screen
    display flex
    flex-direction column
    max-height 486px
    width 320px
    &.time
      width 260px

    &.sources, &.math
      li.list-option
        font-size 11px
        font-weight 900
        &:not(.list-empty)
          text-transform uppercase

    &.sources, &.math, &.time
      li.list-option
        .caret-icon
          svg-icon-style(mp-blue, speed: 0s)
          visibility hidden

        &:hover .caret-icon
          visibility visible

    &.sources
      width 260px

      .contextual-menu-option .option-label
        color grey-700
        font-size 11px
        font-weight 600
        text-transform uppercase

      .list-option.generic-list.contextual-menu-option:hover .option-label
        color mp-blue

      .screen-options-list
        border-bottom 1px solid grey-150

        .screen-options-list
          margin-left 0px
          margin-right 0px

        .list-option
          color grey-700
          font-size 11px
          font-weight 700
          &:not(.list-empty)
            text-transform uppercase
          svg-icon-style(grey-300)
          &:hover
            color mp-blue
            svg-icon-style(mp-blue)

        &:empty, &:last-of-type
          border-bottom none

    &.math
      width 110px

  .builder-label
    color grey-700
    font-size 11px
    font-weight 600
    margin-left 8px
    margin-top 18px
    text-transform uppercase
