@import '../../../stylesheets/common'

builder-filter-edit-control
  .control-container .insights-new-control.new-query-builder
    .edit-control
      dotted-border-bottom(grey-700)
      height 24px
      margin-right 6px
      padding 6px 0 2px
      &:hover
        border-bottom 1px solid mp-blue
      input
        font-size 13px

      .control-label
        border-bottom none
        color grey-700
        font-size 13px

        .edit-label-part
          margin-right 4px
          &:nth-child(odd)
            color grey-700
          &:nth-child(even)
            color grey-500

        &:hover .edit-label-part
          color mp-blue

      input.control-label
        border-bottom 1px solid mp-blue

      button.remove
        right 2px
        top -2px

    &.pane-open .edit-control
      border-bottom 1px solid mp-blue
