@import "../../stylesheets/common"

border-curve = 4px
button-height = 40px

irb-title-input
  height button-height
  position relative

  .irb-title-input
    display flex

  input[type=text], .title-input-disabled, span.mp-name-input-dummy
    background-color inherit
    border none
    color grey-700
    font-size 16px
    font-weight normal
    height button-height
    outline none
    padding 0 13px

  .title-input-disabled
    line-height button-height

  .title-input-enabled
    border 1px solid transparent
    border-radius border-curve
    display inline-flex

    button
      border-radius 3px
      cursor text
      font-size 12px
      font-weight bold
      margin 5px
      margin-left 0
      padding 7px 16px
      &.title-button-disabled
        cursor initial
      &.title-save-new
        border 1px solid grey-200
        box-shadow 0 1px 0 0 grey-100
        color grey-700
        &.title-button-disabled
          color grey-500
      &.title-save
        background-image linear-gradient(to top, blue-300, blue-100), linear-gradient(blue-300, blue-300)
        border 1px solid blue-500
        color #fff
        &.title-button-disabled
          color grey-200

    &:hover
      background-color #fff
      border-color grey-200
      box-shadow inset 0 1px 2px 0 rgba(0, 0, 0, 0.09)

    &.input-focused
      background-color #fff
      border-color blue-300
      button
        cursor pointer
        opacity 1
