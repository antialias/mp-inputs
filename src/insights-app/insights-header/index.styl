@import "../../stylesheets/common"

.insights-header
  align-items center
  border-bottom 1px solid grey-200
  display flex
  height 60px
  padding 0 20px 0 13px
  position relative
  panel-top()

  button
    background-color initial
    border 1px solid grey-300
    border-radius 3px
    color grey-500
    display inline-block
    outline none
    padding 5px

  .loading-dock
    display inline-flex
    margin-left auto

    .add-to-dash
      display inline-flex
      z-index 1

      add-to-dash
        margin-left 3px
        z-index 4 // needs to be positioned over the sticky header which is z-index 1 and extras-menu-container which is z-index 3

      mp-tooltip
        text-align center
        white-space nowrap

    button
      border none
      border-radius 0
      height 25px
      margin-left 5px
      width 30px

      // TODO: remove me
      // z-index is only to stack bottom-placed loading-dock tooltips above the reset query X.
      z-index 1

      &.refresh-query,
      &.report-list-button,
      &.download
        svg-icon-style(grey-500, mp-blue)

      &.report-list-button.saved
        svg-icon-style(green-300)
      &.report-list-button.save-failed
        svg-icon-style(mp-red)

      &.download
        position relative
        cursor default
        &.enabled
          cursor pointer

        .upsell-icon
          position absolute
          right 0
          top 0
          svg-icon-style(mp-purple, size: 16px, right: 0, top: 0)

      mp-tooltip
        white-space nowrap

  .upsell-wrapper
    position absolute
    right 345px
    top 30px
    &.csv-export
      right 370px

.error-no-project-data .insights-header
  .loading-dock
    button
      svg-icon-style(grey-500)
      cursor default

