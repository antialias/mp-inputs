.date-input
  input(
    attrs={
      type: 'text',
      placeholder: inputValue ? $helpers.formatDateDisplay(inputValue) : '',
    }
    on={
      focus: $helpers.focusedInput,
      blur: $helpers.blurredInput,
      change: $helpers.changedInput,
    }
    hook={
      insert: $component.getAttribute('autofocus') ? $helpers.focus : null,
    }
  )
