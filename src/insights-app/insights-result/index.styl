@import "../../stylesheets/common"

// dropdown menu
.options
  background-color white
  border-radius 5px
  box-shadow 0 7px 18px 0 rgba(121,124,135,0.26)
  margin-top 2px
  min-width 100px
  position absolute
  left 0
  padding 8px 10px 9px 10px
  top 0
  z-index 3

.insights-result
  .button-flex-wrapper
    justify-content flex-start

  .button-option
    border-radius 3px
    color grey-700
    font-weight 500
    font-size 12px
    height inherit
    line-height 30px
    padding 0px 10px
    position relative
    text-align left
    white-space nowrap
    width 100%
    svg-icon-style(grey-700, mp-blue, pos-left: -5px)

    &::before
      background-color grey-700

    &:hover
      background-color grey-100
      color mp-blue

    &.selected
      color grey-900
      font-weight bold
      svg-icon-style(grey-900, pos-left: -5px)
      &:hover
        background white
        color grey-900
        cursor default
        svg-icon-style(grey-900, pos-left: -5px)

    &:not(.selected):not(.disabled)
      cursor pointer
