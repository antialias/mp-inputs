@import "../../../../stylesheets/common"
@import "../index"

disable-button-color = grey-200

ul.chart-toggle
  border solid 1px transparent
  border-radius 3px
  display flex

  &.enabled:hover, &.editing-charttype
    border-color border-gray
    box-shadow 0 1px 2px 0 rgba(0, 0, 0, 0.05)

    li.chart-type
      border-color border-gray

      &:after
        content none

  &.enabled
    li.chart-type:not(.disabled)
      button:hover:not(.selected)
        color mp-blue

        &.selected
          color inherit

  li.chart-type
    border-right 1px solid transparent
    display flex
    justify-content flex-end
    position relative
    z-index 3

    &:after
      background-color border-gray
      content ''
      display block
      height 28px
      margin 3px 0
      position absolute
      right -1px
      width 1px

    &:first-child
      .toggle-button
        border-bottom-left-radius 3px
        border-top-left-radius 3px

    &:last-child
      border-right none
      .toggle-button
        border-bottom-right-radius 3px
        border-top-right-radius 3px

      &:after
        content none

    &:not(.disabled):not(.selected)
      .toggle-button:hover
        background-color grey-50

    &:hover, &.editing
      border-color grey-300

      button.dropdown
        > .button-flex-wrapper
          border-color border-gray

        .extras-menu-container
          z-index 2

          .extras-menu
            margin 5px 0
            position absolute
            right 0

    &.disabled
      svg-icon-style(disable-button-color)
      button
        &.label
          svg-icon-style(disable-button-color, pos-left: -5px)
          color disable-button-color
          cursor default

          &:hover
            color disable-button-color

        &.dropdown
          cursor default
          svg-icon-style(disable-button-color)
          > .button-flex-wrapper
            background-color inherit
            border-color transparent

    &.selected
      button.label
        cursor default

    &.has-dropdown
      button.label
        margin-right 17px

      &.selected
        button.dropdown .button-flex-wrapper
          svg-icon-style(grey-900, mp-blue, pos-top: 1px)

  button
    &.label
      font-size 12px
      padding 0 20px
      line-height toggle-height

    &.dropdown
      cursor pointer
      padding 0
      position absolute
      right 7px
      svg-icon-style(grey-300, mp-blue, pos-top: 1px)
      svg-height(toggle-height)

      > .button-flex-wrapper
        background-color grey-100
        border 1px solid transparent
        border-radius 3px
        height 22px
        margin-left 3px
        width 22px

      &:hover
        > .button-flex-wrapper
          background-color grey-50
          border-color border-gray

      &:last-child
        padding-right 10px
        width 30px

  li.chart-type.editing
      button.dropdown
        > .button-flex-wrapper
          background-color grey-50
          border-color border-gray
