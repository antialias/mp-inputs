@import "../../../../stylesheets/common"

.table-chart-type
  border-bottom-left-radius 5px
  border-bottom-right-radius 5px
  overflow hidden

.table-chart
  font-size 12px
  overflow hidden
  white-space nowrap

  .left-table-container,
  .right-table-container
    display inline-block
    position relative

    .fixed-header
      left 0
      position absolute
      top 0
      white-space nowrap
      z-index 1

      .fixed-header-cell
        border-left 1px solid border-gray
        cursor pointer
        display inline-block
        font-weight bold
        padding 0 21px 0 17px
        position relative
        &:first-child
          border-left 1px solid border-gray

        &:hover
          .sort-arrows
            opacity 1

    .sort-arrows
      svg-icon-style(grey-500)
      opacity 0
      position absolute
      right 0
      top 0

      svg-icon
        position absolute
        top 10px
        right 0px

        &.triangle-up
          margin-top -5px

         &.triangle-down
          margin-top 5px

      &.sort-asc .triangle-down
        svg, path
          color grey-900
          fill grey-900

      &.sort-desc .triangle-up
        svg, path
          color grey-900
          fill grey-900

      &.sort-active
        opacity 1

  .left-table-container
    z-index 2

    .fixed-header
      .fixed-header-cell
        &:first-child
          border-left-color transparent

  .left-table, .right-table
    display inline-block
    margin-bottom -3px
    position relative

    table
      width 100%

      th, td
        border 1px solid border-gray
        border-bottom none
        border-top none
        line-height 15px

      th
        padding 0 20px 0 17px

      td
        ellipsis()
        box-sizing border-box
        max-width 300px
        padding 13px 17px
        vertical-align top
        color grey-700
        height 42px

        &.first-column-cell
          border-left none

          &.even
            background grey-50

      th:first-child
        border-left-color transparent

      tr
        border 1px solid border-gray
        border-left none
        border-right none

        &:first-child
          border-top none

        &:nth-child(even) td:not(.first-column-cell)
          background grey-50

      tbody
        tr:last-child
          border-bottom none

  .left-table
    overflow-x scroll
    overflow-y hidden
    text-align left

    th, td
      &:last-child
        border-right none

  .right-table
    overflow-x scroll
    text-align right
    width 100%

    tr:nth-child(even) td
      background grey-50

    th, td
      font-size 13px
      &:last-child
        border-right none

  // 1 or 2 column table

  &:not(.full-width)
    display inline-block

    .left-table
      overflow-y scroll

  // Scroll shadows

  .left-table, .fixed-header
    transition box-shadow 0.2s

  &.scrolled-x
    .left-table
      border-right solid 2px border-gray
      box-shadow 1px 0 2px 0 rgba(11, 42, 61, 0.04)

  &.scrolled-y
    .fixed-header
      border-bottom solid 2px border-gray
      box-shadow 1px 0 2px 0 rgba(11, 42, 61, 0.04)
