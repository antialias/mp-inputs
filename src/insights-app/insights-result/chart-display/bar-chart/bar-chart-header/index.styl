@import "../../../../../stylesheets/common"

irb-bar-chart-header
  .chart-header-container
    align-items center
    display flex
    padding-left 1px

    &.loading
      visibility hidden

  .bar-chart-header, .bar-chart-axis
    align-items center
    display flex
    height 100%
    position relative

    .text
      align-items center
      cursor pointer

      &.shrinkable-label
        ellipsis()
        flex 1 1

    > .sort-icon
      margin-right 10px

    &:hover, .axis-title:hover, &.active-sort-panel, &.active-sort-panel .axis-title
      > .text
        color mp-blue

      > .sort-icon
        svg-icon-style(mp-blue, speed: 0s)

      .sort-icon::before
        opacity 1

  .bar-chart-header
    border-right 1px solid border-gray
    box-sizing border-box

    .text
      padding-left 15px
    .sort-icon
      margin-left auto

  .bar-chart-axis
    justify-content center

    .axis-title
      display flex
      justify-content center

      .sort-axis
        margin 0 10px

      > .text
        text-align center

    .max-value
      color mp-blue
      display flex
      justify-content flex-end
      position absolute
      right 0

      .text
        dotted-border-bottom(mp-blue)
        line-height 20px
        margin-right 30px
        padding-bottom 1px

        &:hover
          border-bottom-style solid

  ul.chart-list
    border solid 1px transparent
    border-radius 3px
    display flex

// sort menu

.bar-chart-header:first-child .sort-holder
  min-width 165px

.sort-holder
  bottom 5px
  display flex
  height 0
  justify-content center
  left 0
  position absolute
  width 100%

  .sort-controls
    display block
    position relative

  .chart-controls-component
    line-height 1
    width 162px

    .title
      margin 0
      padding 20px
      padding-bottom 10px

    ul.control-list
      padding-bottom 10px

      li
        height 34px

    button.button-option
      width 100%

      &.selected .sort-icon
        cursor default

    .sort-icon
      border-right 0 none
      margin 0
      margin-right 5px
      width 30px

    .sort-by-label::after
      content space-character

    .sort-order-label
      text-transform uppercase
