@import "~mixpanel-common/stylesheets/mixins/colors" // grey-700, grey-150, grey-100

{datepicker}
  width 100%

  .inputs
    display flex
    padding-bottom 20px

    date-input
      flex 1
      min-width 0

      {date-input} // container
        display flex

        input
          border-radius 4px
          border 1px solid grey-150
          box-shadow inset-shadow
          color grey-700
          flex 1
          font-size 12px
          min-width 0
          padding 11px 12px

    .preposition
      background-color grey-100
      border-radius 3px
      color grey-700
      font-size 11px
      font-weight 800
      margin 0 12px
      padding 12px
      text-transform uppercase

  .calendar
    border-radius 6px
    border solid 1px grey-150
    width 100%

    calendar, .pika-mixpanel
      display inline-block

      &::after
        display none

      &, .pika-select
        z-index 0
