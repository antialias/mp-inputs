{
    // See https://code.visualstudio.com/Docs/editor/tasks#_defining-a-multiline-problem-matcher
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "dev-server",
            "args": ["run", "dev-server"],
            "isBuildCommand": true,
            "isBackground": true,
            "problemMatcher": {
                "owner": "webpack",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^\\/([^\\s].*)$",
                        "file": 1
                    },
                    {
                        "regexp": "^\\s+(\\d+):(\\d+)\\s+(error|warning|info)\\s+(.*)\\s\\s+(.*)$",
                        "line": 1,
                        "column": 2,
                        "severity": 3,
                        "message": 4,
                        "code": 5,
                        "loop": true
                    }
                ],
                "watching": {
                    "activeOnStart": true,
                    "beginsPattern": "^webpack: Compiling",
                    "endsPattern": "^webpack: (Failed to compile|Compiled with warnings|Compiled successfully)"
                }
            }
        },
        {
            "taskName": "build",
            "args": [
                "run",
                "build"
            ]
        },
        {
            "taskName": "test",
            "args": [
                "run",
                "test"
            ]
        }
    ]
}